@page "/supplier/{name}"
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject Supabase.Client _supabase
@using AI_Driven_Water_Supply.Presentation  @* ✅ Global Models yahan se ayenge *@
@using Supabase.Postgrest.Attributes
@using Supabase.Postgrest.Models

<style>
    .modal-backdrop-custom {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 1040;
    }

    .modal-custom {
        display: block;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1050;
        width: 90%;
        max-width: 500px;
    }

    .water-card {
        background: linear-gradient(145deg, #1e2124, #23272b);
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
    }
</style>

<div class="container mt-5 pb-5">
    <button class="btn btn-outline-secondary mb-4" @onclick='() => Nav.NavigateTo("/")'>
        <i class="bi bi-arrow-left"></i> ← Back to List
    </button>

    <div class="row">
        <div class="col-md-5 mb-4">
            <div class="card water-card text-white border-0 h-100">
                <img src="https://via.placeholder.com/400x300?text=Supplier+Store" class="card-img-top" alt="Supplier Shop" style="height: 250px; object-fit: cover;">
                <div class="card-body">
                    <h2 class="card-title text-info fw-bold">@name</h2>
                    <div class="mb-2">
                        <span class="badge bg-warning text-dark">⭐ 4.5 Rating</span>
                        <span class="badge bg-success">Verified Supplier</span>
                    </div>
                    <p class="card-text text-secondary mt-3">@description</p>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card water-card text-white border-0 p-4">
                <h4 class="mb-4 border-bottom pb-2 border-secondary">Create Your Order</h4>
                <div class="mb-4">
                    <label class="form-label text-light">Select Quantity (Bottles/Tankers)</label>
                    <div class="input-group input-group-lg">
                        <button class="btn btn-outline-light" @onclick="() => UpdateQty(-1)">-</button>
                        <input type="number" class="form-control text-center bg-dark text-white border-secondary" @bind="quantity" readonly />
                        <button class="btn btn-outline-light" @onclick="() => UpdateQty(1)">+</button>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center bg-dark p-3 rounded border border-secondary mb-4">
                    <div>
                        <small class="text-muted">Price per unit</small>
                        <h5 class="m-0 text-white">Rs @pricePerBottle</h5>
                    </div>
                    <div class="text-end">
                        <small class="text-muted">Total Amount</small>
                        <h3 class="m-0 text-warning">Rs @totalPrice</h3>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-success btn-lg py-3 fw-bold" @onclick="OpenOrderModal">Proceed to Order</button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (showModal)
{
    <div class="modal-backdrop-custom"></div>
    <div class="card modal-custom bg-dark text-white border-light shadow-lg">
        <div class="card-header border-secondary d-flex justify-content-between align-items-center">
            <h5 class="m-0">Confirm Delivery Details</h5>
            <button type="button" class="btn-close btn-close-white" @onclick="CloseModal"></button>
        </div>
        <div class="card-body">
            <EditForm Model="orderFormModel" OnValidSubmit="HandleOrderSubmit">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <InputText class="form-control bg-secondary text-white border-0" @bind-Value="orderFormModel.ConsumerName" placeholder="Enter your name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Delivery Address</label>
                    <InputTextArea class="form-control bg-secondary text-white border-0" rows="2" @bind-Value="orderFormModel.Address" placeholder="House #, Street, Area..." />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <InputText class="form-control bg-secondary text-white border-0" @bind-Value="orderFormModel.Phone" placeholder="0300-1234567" />
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Confirm & Send Order 🚀</button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter] public string name { get; set; }
    string description = "";
    int quantity = 1;
    int pricePerBottle = 120;
    int totalPrice = 120;
    bool showModal = false;

    // Local Form Model (Sirf UI ke liye)
    public class OrderRequestForm
    {
        public string ConsumerName { get; set; } = "";
        public string Address { get; set; } = "";
        public string Phone { get; set; } = "";
    }
    OrderRequestForm orderFormModel = new OrderRequestForm();

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(name)) name = "Unknown Supplier";
        description = $"Reliable service by {name}. Delivery usually within 2 hours.";
        Calculate();
    }

    void UpdateQty(int change)
    {
        if (quantity + change >= 1) { quantity += change; Calculate(); }
    }
    void Calculate() => totalPrice = quantity * pricePerBottle;
    void OpenOrderModal() => showModal = true;
    void CloseModal() => showModal = false;

    // ✅ FINAL SUBMIT LOGIC
    private async Task HandleOrderSubmit()
    {
        if (string.IsNullOrWhiteSpace(orderFormModel.Address) || string.IsNullOrWhiteSpace(orderFormModel.Phone)) return;

        try
        {
            // 1. Global Order Model use ho raha hai
            var newOrder = new AI_Driven_Water_Supply.Presentation.Order
            {
                ConsumerName = orderFormModel.ConsumerName,
                Address = orderFormModel.Address,
                Phone = orderFormModel.Phone,
                Quantity = quantity,
                ItemName = "Water Bottle",
                TotalPrice = totalPrice,
                SupplierName = name,
                Status = "Pending"
            };

            var response = await _supabase.From<AI_Driven_Water_Supply.Presentation.Order>().Insert(newOrder);
            var insertedOrder = response.Models.FirstOrDefault();

            if (insertedOrder != null)
            {
                // 2. Auto-Message (Global Message Model)
                var autoMsg = new AI_Driven_Water_Supply.Presentation.Message
                {
                    OrderId = insertedOrder.Id,
                    SenderName = orderFormModel.ConsumerName,
                    ReceiverName = name,
                    Content = $"New Order! {quantity}x Bottles. Address: {orderFormModel.Address}"
                };

                await _supabase.From<AI_Driven_Water_Supply.Presentation.Message>().Insert(autoMsg);

                showModal = false;
                Nav.NavigateTo("/"); // Success ke baad Home par
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }
    // ❌ Yahan se maine Duplicate Message class delete kardi hai
}