    }

        .upload-box:hover {
            border-color: var(--accent-green);
            color: var(--accent-green);
            background: rgba(191, 255, 39, 0.05);
        }

    .btn-close-custom {
        background: none;
        border: none;
        color: #fff;
        font-size: 1.5rem;
        cursor: pointer;
    }
</style>

@code {
    private UserProfile userProfile = new UserProfile();
    private string userEmail = "";
    private bool isLoading = true;
    private bool isSaving = false;
    private bool isUploading = false;
    private string message = "";
    private bool isSuccess = false;
    private bool showImageModal = false;
    private string tempUrl = "";

    [Table("consumerprofile")]
    public class UserProfile : BaseModel
    {
        [Column("id")] public string Id { get; set; } = "";
        [Column("username")] public string Username { get; set; } = "";
        [Column("role")] public string Role { get; set; } = "";
        [Column("location")] public string Location { get; set; } = "";
        [Column("avatar_url")] public string AvatarUrl { get; set; } = "";
        [Column("service_type")] public string ServiceType { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadProfile();
    }

    private async Task LoadProfile()
    {
        var user = AuthService.CurrentUser;
        if (user == null) { await AuthService.TryRefreshSession(); user = AuthService.CurrentUser; }

        if (user != null)
        {
            userEmail = user.Email ?? "No Email";
            try
            {
                var response = await _supabase.From<UserProfile>().Where(x => x.Id == user.Id).Get();
                var data = response.Models.FirstOrDefault();
                if (data != null) userProfile = data;
            }
            catch (Exception ex) { Console.WriteLine(ex.Message); }
        }
        else Nav.NavigateTo("/login");

        isLoading = false;
    }

    // ✅ LOGIC: UPLOAD IMAGE TO SUPABASE
    private async Task UploadImage(InputFileChangeEventArgs e)
    {
        isUploading = true;
        try
        {
            var file = e.File;
            // 1. Read file bytes
            using var stream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024); // 5MB limit
            using var memoryStream = new System.IO.MemoryStream();
            await stream.CopyToAsync(memoryStream);
            var bytes = memoryStream.ToArray();

            // 2. Generate unique filename
            string fileName = $"{userProfile.Id}_{DateTime.Now.Ticks}{System.IO.Path.GetExtension(file.Name)}";

            // 3. Upload to 'avatars' bucket
            await _supabase.Storage.From("avatars").Upload(bytes, fileName);

            // 4. Get Public URL
            string publicUrl = _supabase.Storage.From("avatars").GetPublicUrl(fileName);

            // 5. Update UI
            userProfile.AvatarUrl = publicUrl;
            showImageModal = false; // Close modal
        }
        catch (Exception ex)
        {
            Console.WriteLine("Upload Error: " + ex.Message);
        }
        finally { isUploading = false; }
    }

    // ✅ LOGIC: SET URL MANUALLY
    private void SetUrlImage()
    {
        if (!string.IsNullOrWhiteSpace(tempUrl))
        {
            userProfile.AvatarUrl = tempUrl;
            showImageModal = false;
        }
    }

    private async Task HandleSave()
    {
        isSaving = true;
        message = "";
        try
        {
            await _supabase.From<UserProfile>()
                           .Where(x => x.Id == userProfile.Id)
                           .Set(x => x.Location, userProfile.Location)
                           .Set(x => x.AvatarUrl, userProfile.AvatarUrl)
                           .Set(x => x.ServiceType, userProfile.ServiceType)
                           .Update();

            isSuccess = true;
            message = "Profile updated successfully!";
        }
        catch (Exception ex) { isSuccess = false; message = "Error updating profile."; }
        finally { isSaving = false; await Task.Delay(3000); message = ""; }
    }

    private void GoBack()
    {
        if (userProfile.Role == "Consumer") Nav.NavigateTo("/Consumer");
        else Nav.NavigateTo("/ProviderDashboard");
    }
}