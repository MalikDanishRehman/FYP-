@page "/AdminDispute"
@using AI_Driven_Water_Supply.Application.Interfaces
@using AI_Driven_Water_Supply.Application.Models
@using Supabase.Postgrest.Models
@inject Supabase.Client _supabase
@inject IAuthService AuthService
@inject NavigationManager Nav
@rendermode InteractiveServer
@layout AdminSidebar

<style>
    /* --- Header & Tabs --- */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .header-title h2 {
        font-size: 2rem;
        font-weight: 800;
        color: white;
        margin: 0;
    }

    .header-title span {
        color: #BFFF27;
    }

    /* Segmented Control Tabs */
    .filter-tabs {
        display: flex;
        background: #0f0f12;
        padding: 4px;
        border-radius: 12px;
        border: 1px solid #1f1f1f;
        overflow-x: auto; /* Allow scrolling if needed on small screens */
    }

    .tab-btn {
        padding: 8px 20px;
        border: none;
        background: transparent;
        color: #888;
        cursor: pointer;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: 0.3s;
        white-space: nowrap; /* Prevent text wrapping */
    }

        .tab-btn:hover {
            color: white;
        }

        .tab-btn.active {
            background: #BFFF27;
            color: black;
            box-shadow: 0 2px 10px rgba(191, 255, 39, 0.2);
        }

    /* --- Stats Grid --- */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: #0f0f12;
        border: 1px solid #1f1f1f;
        padding: 20px;
        border-radius: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .stat-info p {
        margin: 0;
        color: #888;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-info h3 {
        margin: 5px 0 0 0;
        color: white;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .stat-icon {
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    /* --- Table Styles --- */
    .table-card {
        background: #0f0f12;
        border: 1px solid #1f1f1f;
        border-radius: 12px;
        padding: 20px;
        overflow-x: auto; /* Enables horizontal scroll on mobile */
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 600px; /* Minimum width to prevent table columns from squishing too much */
    }

        .custom-table th {
            text-align: left;
            padding: 15px;
            color: #666;
            border-bottom: 1px solid #1f1f1f;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .custom-table td {
            padding: 15px;
            border-bottom: 1px solid #1f1f1f;
            color: #ddd;
            vertical-align: middle;
            font-size: 0.95rem;
        }

        .custom-table tr:hover {
            background: rgba(255, 255, 255, 0.02);
        }

    /* Badges */
    .badge-status {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .status-pending {
        background: rgba(255, 165, 2, 0.15);
        color: #ffa502;
        border: 1px solid rgba(255, 165, 2, 0.3);
    }

    .status-resolved {
        background: rgba(46, 204, 113, 0.15);
        color: #2ecc71;
        border: 1px solid rgba(46, 204, 113, 0.3);
    }

    .priority-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }

    .p-high {
        color: #e74c3c;
    }

        .p-high .priority-dot {
            background: #e74c3c;
            box-shadow: 0 0 8px #e74c3c;
        }

    .p-med {
        color: #f1c40f;
    }

        .p-med .priority-dot {
            background: #f1c40f;
        }

    .p-low {
        color: #3498db;
    }

        .p-low .priority-dot {
            background: #3498db;
        }

    /* Action Button */
    .btn-action {
        background: transparent;
        border: 1px solid #333;
        color: #ddd;
        padding: 6px 15px;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.2s;
        font-size: 0.85rem;
        font-weight: 500;
        white-space: nowrap;
    }

        .btn-action:hover {
            background: #BFFF27;
            color: black;
            border-color: #BFFF27;
            font-weight: 700;
        }

    /* --- Modal Styling --- */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(8px);
        padding: 15px; /* Added padding to prevent touching screen edges */
        box-sizing: border-box;
    }

    .modal-content {
        background: #14161f;
        width: 100%; /* Responsive width */
        max-width: 500px; /* Restrict max size on desktop */
        padding: 30px;
        border-radius: 16px;
        border: 1px solid rgba(255,255,255,0.1);
        color: white;
        position: relative;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
        max-height: 90vh; /* Prevent modal from exceeding screen height */
        overflow-y: auto; /* Scroll inside modal if content is long */
    }

    .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 1.2rem;
        color: #666;
        cursor: pointer;
        border: none;
        background: none;
        transition: 0.2s;
    }

        .close-btn:hover {
            color: white;
        }

    .info-group {
        margin-bottom: 20px;
    }

    .info-label {
        display: block;
        color: #888;
        font-size: 0.75rem;
        text-transform: uppercase;
        margin-bottom: 5px;
        letter-spacing: 0.5px;
    }

    .info-value {
        font-size: 1rem;
        color: white;
    }

    .desc-box {
        background: #0a0a0c;
        border: 1px solid #1f1f1f;
        padding: 15px;
        border-radius: 8px;
        color: #ccc;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .admin-textarea {
        width: 100%;
        background: #0a0a0c;
        border: 1px solid #333;
        color: white;
        border-radius: 8px;
        padding: 12px;
        font-family: inherit;
        margin-bottom: 15px;
        resize: vertical;
        outline: none;
        transition: 0.3s;
        box-sizing: border-box;
    }

        .admin-textarea:focus {
            border-color: #BFFF27;
        }

    .btn-resolve-submit {
        width: 100%;
        background: #BFFF27;
        color: black;
        font-weight: 700;
        border: none;
        padding: 12px;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-resolve-submit:hover {
            background: white;
            box-shadow: 0 0 15px rgba(191, 255, 39, 0.4);
        }

    /* === RESPONSIVE DESIGN === */
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .filter-tabs {
            width: 100%; /* Take full width on mobile */
            padding: 5px;
        }

        .tab-btn {
            flex: 1; /* Tabs stretch equally */
            text-align: center;
            padding: 10px;
        }

        .stats-grid {
            grid-template-columns: 1fr; /* Stack stats */
        }

        .table-card {
            padding: 10px; /* Reduce padding to maximize table space */
        }

        .modal-content {
            padding: 20px; /* Less padding inside modal for mobile */
        }
    }
</style>

<div class="page-header">
    <div class="header-title">
        <h2>Dispute <span>Center</span></h2>
        <small style="color:#666;">Manage and resolve customer complaints</small>
    </div>

    <div class="filter-tabs">
        <button class="tab-btn @(activeTab == "All" ? "active" : "")" @onclick='() => activeTab = "All"'>All Tickets</button>
        <button class="tab-btn @(activeTab == "Pending" ? "active" : "")" @onclick='() => activeTab = "Pending"'>Pending</button>
        <button class="tab-btn @(activeTab == "Resolved" ? "active" : "")" @onclick='() => activeTab = "Resolved"'>Resolved</button>
    </div>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-info">
            <p>Total Tickets</p>
            <h3>@tickets.Count</h3>
        </div>
        <div class="stat-icon" style="background: rgba(255,255,255,0.05); color: white;">
            <i class="fa-solid fa-ticket"></i>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-info">
            <p>Pending Action</p>
            <h3>@tickets.Count(t => t.Status == "Pending")</h3>
        </div>
        <div class="stat-icon" style="background: rgba(255, 165, 2, 0.1); color: #ffa502;">
            <i class="fa-solid fa-clock"></i>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-info">
            <p>Critical Issues</p>
            <h3>@tickets.Count(t => t.Priority == "High")</h3>
        </div>
        <div class="stat-icon" style="background: rgba(231, 76, 60, 0.1); color: #e74c3c;">
            <i class="fa-solid fa-triangle-exclamation"></i>
        </div>
    </div>
</div>

<div class="table-card">
    <table class="custom-table">
        <thead>
            <tr>
                <th>Ticket ID</th>
                <th>Involved Parties</th>
                <th>Issue Details</th>
                <th>Priority</th>
                <th>Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in FilteredTickets)
            {
                <tr>
                    <td style="color:#666; font-family:monospace;">#@ticket.TicketId</td>
                    <td>
                        <div style="font-weight:600;">@ticket.UserName</div>
                        <small style="color:#888;">vs @ticket.VendorName</small>
                    </td>
                    <td>
                        <div style="color:#ddd;">@ticket.IssueType</div>
                        <small style="color:#666; display:block; max-width:200px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                            @ticket.Description
                        </small>
                    </td>
                    <td>
                        <span class="@GetPriorityClass(ticket.Priority)" style="font-weight:600; font-size:0.9rem;">
                            <span class="priority-dot"></span> @ticket.Priority
                        </span>
                    </td>
                    <td style="color:#888;">@ticket.Date</td>
                    <td>
                        <span class="badge-status @(ticket.Status == "Pending" ? "status-pending" : "status-resolved")">
                            @if (ticket.Status == "Pending")
                            {
                                <i class="fa-solid fa-circle-exclamation"></i>
                            }
                            else
                            {
                                <i class="fa-solid fa-check"></i>
                            }
                            @ticket.Status
                        </span>
                    </td>
                    <td>
                        <button class="btn-action" @onclick="() => OpenTicket(ticket)">
                            @(ticket.Status == "Pending" ? "Resolve" : "Details")
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (showModal && selectedTicket != null)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <button class="close-btn" @onclick="CloseModal"><i class="fa-solid fa-xmark"></i></button>

            <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px; padding-right: 25px;">
                <h3 style="margin:0; font-weight:700;">Ticket #@selectedTicket.TicketId</h3>
                <span class="badge-status @(selectedTicket.Status == "Pending" ? "status-pending" : "status-resolved")">
                    @selectedTicket.Status
                </span>
            </div>

            <div class="info-group">
                <span class="info-label">Issue Type</span>
                <div class="info-value" style="display:flex; align-items:center;">
                    @selectedTicket.IssueType
                    <span class="@GetPriorityClass(selectedTicket.Priority)" style="margin-left:15px; font-size:0.8rem; font-weight:bold;">
                        (@selectedTicket.Priority Priority)
                    </span>
                </div>
            </div>

            <div class="info-group">
                <span class="info-label">Description</span>
                <div class="desc-box">
                    "@selectedTicket.Description"
                </div>
            </div>

            <div class="info-group" style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
                <div>
                    <span class="info-label">Customer</span>
                    <div class="info-value">@selectedTicket.UserName</div>
                </div>
                <div>
                    <span class="info-label">Vendor</span>
                    <div class="info-value">@selectedTicket.VendorName</div>
                </div>
            </div>

            <hr style="border-color:rgba(255,255,255,0.1); margin: 20px 0;">

            @if (selectedTicket.Status == "Pending")
            {
                <div>
                    <span class="info-label">Admin Resolution</span>
                    <textarea class="admin-textarea" rows="3" placeholder="Enter resolution notes or outcome..."></textarea>

                    <button class="btn-resolve-submit">
                        <i class="fa-solid fa-gavel"></i> Mark as Resolved
                    </button>
                </div>
            }
            else
            {
                <div style="padding:15px; background:rgba(46, 204, 113, 0.1); border:1px solid #2ecc71; border-radius:8px; color:#2ecc71; display:flex; align-items:center; gap:10px;">
                    <i class="fa-solid fa-circle-check"></i>
                    <div>
                        <strong>Case Closed</strong>
                        <div style="font-size:0.8rem; opacity:0.8;">Resolution has been provided and ticket is closed.</div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    // --- State Variables ---
    private string activeTab = "All";
    private bool showModal = false;
    private DisputeTicket selectedTicket;

    // --- Data Model ---
    public class DisputeTicket
    {
        public string TicketId { get; set; }
        public string UserName { get; set; }
        public string VendorName { get; set; }
        public string IssueType { get; set; }
        public string Description { get; set; }
        public string Priority { get; set; }
        public string Date { get; set; }
        public string Status { get; set; }
    }

    // --- Hardcoded Data ---
    private List<DisputeTicket> tickets = new List<DisputeTicket>
    {
        new DisputeTicket { TicketId = "9012", UserName = "Ahmed Ali", VendorName = "Aqua Pure", IssueType = "Water Quality", Description = "Water smells weird and tastes salty.", Priority = "High", Date = "10 Feb", Status = "Pending" },
        new DisputeTicket { TicketId = "9013", UserName = "Sara Khan", VendorName = "Blue Drop", IssueType = "Late Delivery", Description = "Order was delayed by 4 hours without notice.", Priority = "Med", Date = "09 Feb", Status = "Pending" },
        new DisputeTicket { TicketId = "8840", UserName = "Bilal", VendorName = "Clean Sip", IssueType = "Rude Behavior", Description = "Delivery guy was very rude.", Priority = "Low", Date = "05 Feb", Status = "Resolved" },
        new DisputeTicket { TicketId = "8845", UserName = "Usman", VendorName = "QuickWater", IssueType = "Payment Issue", Description = "Charged double for single refill.", Priority = "High", Date = "01 Feb", Status = "Resolved" },
    };

    // --- Logic ---
    private IEnumerable<DisputeTicket> FilteredTickets
    {
        get
        {
            if (activeTab == "All") return tickets;
            return tickets.Where(t => t.Status == activeTab);
        }
    }

    private string GetPriorityClass(string priority)
    {
        return priority switch
        {
            "High" => "p-high",
            "Med" => "p-med",
            _ => "p-low"
        };
    }

    private void OpenTicket(DisputeTicket ticket)
    {
        selectedTicket = ticket;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }
}