@page "/"

<!-- ✅ Bootstrap + Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #0b0d17;
        color: #e4e6eb;
        font-family: 'Poppins', sans-serif;
    }

    /* 🔹 Hero Section */
    .hero {
        padding: 120px 0;
        text-align: left;
        color: white;
        background: linear-gradient(145deg, #0b0d17, #111325);
        position: relative;
        overflow: hidden;
    }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            color: #fff;
        }

        .hero p {
            color: #b0b3c2;
            font-size: 1.25rem;
            max-width: 600px;
        }

    /* 🔹 Buttons */
    .btn-primary {
        background-color: #b2f94e;
        border: none;
        color: #000;
        font-weight: 600;
        padding: 12px 30px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #d0ff6b;
            transform: scale(1.05);
        }

    .btn-outline-light {
        border-color: #b2f94e;
        color: #b2f94e;
        font-weight: 500;
    }

        .btn-outline-light:hover {
            background-color: #b2f94e;
            color: #000;
        }

    /* 🔹 About Section */
    .about {
        background-color: #111325;
        padding: 100px 0;
        color: #e4e6eb;
    }

    .card {
        background-color: #171a2b;
        border: none;
        color: #e4e6eb;
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            background-color: #1c2033;
        }

    .card-title {
        color: #b2f94e;
        font-weight: 600;
    }
</style>

<!-- ✅ Hero Section -->
<section class="hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h1>Smart Water Distribution System 💧</h1>
                <p class="mt-4">
                    Harnessing AI for efficient, predictive, and sustainable water supply management.
                </p>
                <div class="mt-5">
                    <a href="/Signup" class="btn btn-primary me-3">Get Started</a>
                    <a href="#" class="btn btn-outline-light">Learn More</a>
                </div>
            </div>
            <div class="col-md-5 text-center">
                <img src="/images/hero.png" alt="Water AI Logo" class="img-fluid" style="max-width: 300px; opacity: 0.9;">
            </div>

        </div>
    </div>
</section>

<!-- ✅ About Section -->
<section class="about">
    <div class="container text-center">
        <h2 class="fw-bold text-white mb-4">About Our System</h2>
        <p class="text-muted mx-auto text-white" style="max-width: 800px;">
            Our AI-Driven Water Supply system optimizes water flow, predicts shortages, and improves distribution using
            real-time analytics. With machine learning algorithms, it minimizes wastage and ensures maximum coverage for communities.
        </p>

        <div class="row g-4 mt-5">
            <div class="col-md-4">
                <div class="card shadow-lg h-100 p-4">
                    <h5 class="card-title">Real-Time Monitoring</h5>
                    <p class="card-text">Track flow, pressure, and usage across multiple zones instantly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg h-100 p-4">
                    <h5 class="card-title">AI Predictions</h5>
                    <p class="card-text">Predict future demands and shortages using machine learning models.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg h-100 p-4">
                    <h5 class="card-title">Smart Control</h5>
                    <p class="card-text">Automatically balance water distribution efficiently across networks.</p>
                </div>
            </div>
        </div>
    </div>
</section>
