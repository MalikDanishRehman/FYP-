@code {
    // Model define kiya taake role check kar sakein
    [Table("profiles")]
    public class UserProfile : BaseModel
    {
        [Column("id")] public string Id { get; set; } = "";
        [Column("role")] public string Role { get; set; } = "";
    }

    private async Task HandleGetStarted()
    {
        // 1. Check Session
        var user = AuthService.CurrentUser;
        if (user == null)
        {
            await AuthService.TryRefreshSession();
            user = AuthService.CurrentUser;
        }

        // 2. Logic: Agar login hai to role check karo
        if (user != null)
        {
            try
            {
                var response = await _supabase.From<UserProfile>().Where(x => x.Id == user.Id).Get();
                var profile = response.Models.FirstOrDefault();

                if (profile != null)
                {
                    if (profile.Role == "Consumer") Nav.NavigateTo("/Consumer");
                    else Nav.NavigateTo("/ProviderDashboard");
                    return; // Yahin se redirect, neeche nahi jayega
                }
            }
            catch { /* Error aye to normal flow chalne do */ }
        }

        // 3. Agar Login nahi hai, to Selection Page par bhejo
        Nav.NavigateTo("/get-started");
    }
}