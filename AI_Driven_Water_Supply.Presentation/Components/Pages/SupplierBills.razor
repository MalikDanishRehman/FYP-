@page "/supplier-bills"
@inject NavigationManager Nav

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="glass-nav">
    <div class="d-flex align-items-center gap-3">
        <i class="fa-solid fa-arrow-left back-btn" @onclick="GoBack"></i>
        <div class="brand-logo">Earnings & Bills</div>
    </div>
    <div>
        <i class="fa-solid fa-wallet fs-4 text-earn"></i>
    </div>
</div>

<div class="container-bills">

    <div class="summary-grid">
        <div class="summary-card">
            <div class="summary-label">Total Earnings</div>
            <div class="summary-val text-earn">Rs 45,200</div>
        </div>
        <div class="summary-card">
            <div class="summary-label">Pending Payments</div>
            <div class="summary-val text-pending">Rs 3,450</div>
        </div>
    </div>

    <div class="section-title">Pending Collections (To Collect)</div>

    <div class="bill-card">
        <div class="bill-info">
            <div class="bill-icon"><i class="fa-solid fa-hand-holding-dollar"></i></div>
            <div class="bill-details">
                <h6>Consumer: Kashan</h6>
                <p>Order #ORD-9921 • 20 Litres Bottle</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount">Rs 1,200</span>
            <span class="status-badge status-due mb-2">Payment Due</span>
            <br>
            <button class="btn-remind"><i class="fa-regular fa-bell me-1"></i> Remind</button>
        </div>
    </div>

    <div class="bill-card">
        <div class="bill-info">
            <div class="bill-icon"><i class="fa-solid fa-hand-holding-dollar"></i></div>
            <div class="bill-details">
                <h6>Consumer: Ali Khan</h6>
                <p>Order #ORD-8812 • Monthly Subscription</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount">Rs 2,250</span>
            <span class="status-badge status-due">Payment Due</span>
            <br>
            <button class="btn-remind"><i class="fa-regular fa-bell me-1"></i> Remind</button>
        </div>
    </div>


    <div class="section-title mt-5">Recent Transactions (Received)</div>

    <div class="bill-card" style="opacity: 0.8;">
        <div class="bill-info">
            <div class="bill-icon" style="color: #24FE41;"><i class="fa-solid fa-sack-dollar"></i></div>
            <div class="bill-details">
                <h6>Consumer: Saif Raza</h6>
                <p>Order #ORD-7721 • Yesterday</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount text-muted">Rs 450</span>
            <span class="status-badge status-received">Received</span>
        </div>
    </div>

    <div class="bill-card" style="opacity: 0.8;">
        <div class="bill-info">
            <div class="bill-icon" style="color: #24FE41;"><i class="fa-solid fa-sack-dollar"></i></div>
            <div class="bill-details">
                <h6>Consumer: Fatima Bibi</h6>
                <p>Order #ORD-5511 • 10 Oct 2024</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount text-muted">Rs 900</span>
            <span class="status-badge status-received">Received</span>
        </div>
    </div>

</div>

@code {
    void GoBack()
    {
        // Wapas Provider Dashboard par bhejega
        Nav.NavigateTo("/ProviderDashboard");
    }
}