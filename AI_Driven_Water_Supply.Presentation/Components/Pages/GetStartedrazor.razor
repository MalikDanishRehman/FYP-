@page "/get-started"
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="selection-container">
    <div class="text-center mb-5">
        <h1 class="brand-title">💧 HydroAI</h1>
        <p class="text-muted">Choose how you want to join us</p>
    </div>

    <div class="cards-wrapper">
        <div class="role-card consumer" @onclick='() => SelectRole("Consumer")'>
            <div class="icon-circle">
                <i class="bi bi-cart-check-fill"></i>
            </div>
            <h3>I want to Buy Water</h3>
            <p>Order water tankers or bottles for your home.</p>
            <div class="arrow-icon"><i class="bi bi-arrow-right"></i></div>
        </div>

        <div class="role-card provider" @onclick='() => SelectRole("Provider")'>
            <div class="icon-circle">
                <i class="bi bi-truck"></i>
            </div>
            <h3>I want to Sell Water</h3>
            <p>Manage orders, delivery & grow your business.</p>
            <div class="arrow-icon"><i class="bi bi-arrow-right"></i></div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <a href="/login" class="text-decoration-none text-muted small hover-link">Already have an account? <span class="text-info">Login</span></a>
    </div>
</div>

<style>
    body {
        background-color: #050505;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    .selection-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at center, #1a1a2e 0%, #000000 100%);
    }

    .brand-title {
        font-weight: 800;
        font-size: 2.5rem;
        background: linear-gradient(90deg, #00C9FF 0%, #92FE9D 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 10px;
    }

    .cards-wrapper {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .role-card {
        background: rgba(30, 30, 30, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: 300px;
        padding: 40px 20px;
        border-radius: 20px;
        text-align: center;
        cursor: pointer;
        transition: 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .role-card:hover {
            transform: translateY(-10px);
            border-color: #00C9FF;
            box-shadow: 0 10px 40px rgba(0, 201, 255, 0.2);
        }

    .icon-circle {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.05);
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: #fff;
        transition: 0.3s;
    }

    .consumer:hover .icon-circle {
        background: #00C9FF;
        color: black;
    }

    .provider:hover .icon-circle {
        background: #b2f94e;
        color: black;
    }

    .role-card h3 {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 10px;
        color: white;
    }

    .role-card p {
        font-size: 0.9rem;
        color: #aaa;
    }

    .arrow-icon {
        margin-top: 20px;
        font-size: 1.5rem;
        opacity: 0;
        transform: translateX(-20px);
        transition: 0.3s;
        color: #00C9FF;
    }

    .role-card:hover .arrow-icon {
        opacity: 1;
        transform: translateX(0);
    }

    .hover-link:hover span {
        text-decoration: underline;
    }
</style>

@code {
    void SelectRole(string role)
    {
        // URL ke zariye Role pass kar rahe hain
        Nav.NavigateTo($"/signup?role={role}");
    }
}