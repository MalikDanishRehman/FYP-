@page "/bills"
@using AI_Driven_Water_Supply.Presentation
@using Supabase.Postgrest.Models
@inject Supabase.Client _supabase
@inject NavigationManager Nav
@inject AI_Driven_Water_Supply.Application.Interfaces.IAuthService AuthService

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="glass-nav">
    <div class="d-flex align-items-center gap-3">
        <i class="fa-solid fa-arrow-left back-btn" @onclick="GoBack"></i>
        <div class="brand-logo">My Bills</div>
    </div>
</div>

<div class="container-bills">

    <div class="summary-grid">
        <div class="summary-card">
            <div class="summary-label">Total Unpaid</div>
            <div class="summary-val text-danger-neon">Rs @TotalUnpaid</div>
        </div>
        <div class="summary-card">
            <div class="summary-label">Last Paid</div>
            <div class="summary-val text-neon">Rs @LastPaidAmount</div>
        </div>
    </div>

    <div class="section-title">Pending Bills</div>
    @if (pendingBills.Count == 0)
    {
        <p class="text-center text-muted py-3">No pending bills.</p>
    }
    else
    {
        @foreach (var bill in pendingBills)
        {
            <div class="bill-card">
                <div class="bill-info">
                    <div class="bill-icon"><i class="fa-solid fa-bottle-water"></i></div>
                    <div class="bill-details">
                        <h6>Supplier: @bill.SupplierName</h6>
                        <p>Order #@bill.OrderId • @bill.CreatedAt.ToLocalTime().ToString("dd MMM")</p>
                    </div>
                </div>
                <div class="bill-action">
                    <span class="bill-amount">Rs @bill.Amount</span>
                    <button class="btn-pay" @onclick="() => PayBill(bill)">Pay Now</button>
                </div>
            </div>
        }
    }

    <div class="section-title mt-5">Payment History</div>
    @foreach (var bill in paidBills)
    {
        <div class="bill-card" style="opacity: 0.7;">
            <div class="bill-info">
                <div class="bill-icon" style="color: #92FE9D;"><i class="fa-solid fa-check-circle"></i></div>
                <div class="bill-details">
                    <h6>Supplier: @bill.SupplierName</h6>
                    <p>Order #@bill.OrderId • @bill.CreatedAt.ToLocalTime().ToString("dd MMM")</p>
                </div>
            </div>
            <div class="bill-action">
                <span class="bill-amount text-muted">Rs @bill.Amount</span>
                <span class="status-badge status-paid">Paid</span>
            </div>
        </div>
    }
</div>

@code {
    List<Bill> pendingBills = new();
    List<Bill> paidBills = new();
    decimal TotalUnpaid = 0;
    decimal LastPaidAmount = 0;
    string MyName = "";

    protected override async Task OnInitializedAsync()
    {
        var user = AuthService.CurrentUser;
        if (user == null) user = _supabase.Auth.CurrentUser;

        if (user != null)
        {
            // Fix: Null safety check added here
            string email = user.Email ?? "";

            if (user.UserMetadata != null && user.UserMetadata.TryGetValue("username", out var nameObj))
                MyName = nameObj?.ToString() ?? email.Split('@')[0];
            else
                MyName = email.Split('@')[0];

            await LoadBills();
        }
    }

    async Task LoadBills()
    {
        var response = await _supabase.From<Bill>()
            .Where(x => x.ConsumerName == MyName)
            .Order("created_at", Supabase.Postgrest.Constants.Ordering.Descending)
            .Get();

        var allBills = response.Models;

        pendingBills = allBills.Where(b => b.Status == "Unpaid").ToList();
        paidBills = allBills.Where(b => b.Status == "Paid").ToList();

        TotalUnpaid = pendingBills.Sum(x => x.Amount);

        // Fix: Added ?. and ?? 0 to handle null scenario
        LastPaidAmount = paidBills.FirstOrDefault()?.Amount ?? 0;
    }

    async Task PayBill(Bill bill)
    {
        bill.Status = "Paid";
        await _supabase.From<Bill>().Update(bill);
        await LoadBills();
    }

    void GoBack() => Nav.NavigateTo("/Consumer");
}