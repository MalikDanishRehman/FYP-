@page "/bills"
@using AI_Driven_Water_Supply.Presentation
@using Supabase.Postgrest.Models
@inject Supabase.Client _supabase
@inject NavigationManager Nav
@inject AI_Driven_Water_Supply.Application.Interfaces.IAuthService AuthService

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    /* --- Base Styles --- */
    .glass-nav {
        background: rgba(20, 20, 20, 0.8);
        backdrop-filter: blur(12px);
        padding: 15px 20px;
        position: sticky;
        top: 0;
        z-index: 100;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
    }

    .back-btn { cursor: pointer; font-size: 1.2rem; }
    .brand-logo { font-weight: bold; font-size: 1.2rem; margin-left: 10px; }

    .container-bills {
        padding: 20px;
        max-width: 600px;
        margin: 0 auto;
        color: white;
        padding-bottom: 80px;
    }

    /* --- Summary Cards --- */
    .summary-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 30px; }
    .summary-card {
        background: linear-gradient(145deg, #1e1e1e, #2a2a2a);
        padding: 15px;
        border-radius: 15px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }
    .summary-label { font-size: 0.8rem; color: #aaa; text-transform: uppercase; letter-spacing: 1px; }
    .summary-val { font-size: 1.4rem; font-weight: bold; margin-top: 5px; }
    .text-danger-neon { color: #ff4d4d; text-shadow: 0 0 10px rgba(255, 77, 77, 0.3); }
    .text-neon { color: #00e676; text-shadow: 0 0 10px rgba(0, 230, 118, 0.3); }

    .section-title { font-size: 1.1rem; margin-bottom: 15px; font-weight: 600; color: #ddd; border-left: 4px solid #00e676; padding-left: 10px; }

    /* --- Bill Cards --- */
    .bill-card {
        background: rgba(40, 40, 40, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: transform 0.2s;
    }
    .bill-info { display: flex; align-items: center; gap: 15px; }
    .bill-icon {
        width: 40px; height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        color: #00d2ff;
    }
    .bill-details h6 { margin: 0; font-size: 1rem; color: white; }
    .bill-details p { margin: 0; font-size: 0.75rem; color: #888; }
    
    .bill-action { text-align: right; display: flex; flex-direction: column; align-items: flex-end; gap: 5px; }
    .bill-amount { font-weight: bold; font-size: 1.1rem; color: white; }

    .btn-pay {
        background: linear-gradient(90deg, #00d2ff, #3a7bd5);
        border: none;
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0, 210, 255, 0.3);
    }
    .status-badge { padding: 4px 10px; border-radius: 10px; font-size: 0.7rem; }
    .status-paid { background: rgba(0, 230, 118, 0.2); color: #00e676; }

    /* --- PAYMENT MODAL STYLES (New) --- */
    .modal-overlay {
        position: fixed; top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0, 0, 0, 0.85); /* Dark background */
        backdrop-filter: blur(5px);
        display: flex; justify-content: center; align-items: center;
        z-index: 1000;
        animation: fadeIn 0.2s ease-in-out;
    }

    .payment-modal {
        background: #1e1e1e;
        width: 90%; max-width: 400px;
        border-radius: 20px;
        padding: 25px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        text-align: center;
        position: relative;
        animation: slideUp 0.3s ease-out;
    }

    .modal-header h4 { color: white; margin-bottom: 5px; }
    .modal-header p { color: #888; font-size: 0.9rem; margin-bottom: 20px; }
    
    .amount-tag {
        background: rgba(0, 210, 255, 0.1); color: #00d2ff;
        padding: 5px 12px; border-radius: 8px; font-weight: bold;
        display: inline-block; margin-bottom: 20px;
    }

    .payment-options { display: flex; flex-direction: column; gap: 12px; }

    .pay-opt-btn {
        display: flex; align-items: center; justify-content: space-between;
        padding: 15px 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.05);
        color: white;
        cursor: pointer;
        transition: 0.2s;
        text-align: left;
    }

    /* JazzCash Specific Style */
    .jazz-btn:hover { background: #b71c1c; border-color: #b71c1c; }
    .card-btn:hover { background: #1565c0; border-color: #1565c0; }

    .pay-opt-btn i { font-size: 1.2rem; }
    .pay-opt-btn span { font-weight: 600; font-size: 1rem; }

    .btn-close-modal {
        margin-top: 20px;
        background: transparent; border: none; color: #888;
        font-size: 0.9rem; text-decoration: underline; cursor: pointer;
    }

    @@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @@keyframes slideUp { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

</style>

<div class="glass-nav">
    <div class="d-flex align-items-center gap-3">
        <i class="fa-solid fa-arrow-left back-btn" @onclick="GoBack"></i>
        <div class="brand-logo">My Bills</div>
    </div>
</div>

<div class="container-bills">

    <div class="summary-grid">
        <div class="summary-card">
            <div class="summary-label">Total Unpaid</div>
            <div class="summary-val text-danger-neon">Rs @TotalUnpaid</div>
        </div>
        <div class="summary-card">
            <div class="summary-label">Last Paid</div>
            <div class="summary-val text-neon">Rs @LastPaidAmount</div>
        </div>
    </div>

    <div class="section-title">Pending Bills</div>
    @if (pendingBills.Count == 0)
    {
        <p class="text-center text-muted py-3">No pending bills.</p>
    }
    else
    {
        @foreach (var bill in pendingBills)
        {
            <div class="bill-card">
                <div class="bill-info">
                    <div class="bill-icon"><i class="fa-solid fa-bottle-water"></i></div>
                    <div class="bill-details">
                        <h6>Supplier: @bill.SupplierName</h6>
                        <p>Order #@bill.OrderId • @bill.CreatedAt.ToLocalTime().ToString("dd MMM")</p>
                    </div>
                </div>
                <div class="bill-action">
                    <span class="bill-amount">Rs @bill.Amount</span>
                    <button class="btn-pay" @onclick="() => OpenPaymentModal(bill)">Pay Now</button>
                </div>
            </div>
        }
    }

    <div class="section-title mt-5">Payment History</div>
    @foreach (var bill in paidBills)
    {
        <div class="bill-card" style="opacity: 0.7;">
            <div class="bill-info">
                <div class="bill-icon" style="color: #92FE9D;"><i class="fa-solid fa-check-circle"></i></div>
                <div class="bill-details">
                    <h6>Supplier: @bill.SupplierName</h6>
                    <p>Order #@bill.OrderId • @bill.CreatedAt.ToLocalTime().ToString("dd MMM")</p>
                </div>
            </div>
            <div class="bill-action">
                <span class="bill-amount text-muted">Rs @bill.Amount</span>
                <span class="status-badge status-paid">Paid</span>
            </div>
        </div>
    }
</div>

@if (showPaymentModal && selectedBill != null)
{
    <div class="modal-overlay" @onclick="CloseModal">
        <div class="payment-modal" @onclick:stopPropagation="true">
            
            <div class="modal-header">
                <h4>Choose Payment</h4>
                <p>Order #@selectedBill.OrderId</p>
                <div class="amount-tag">Rs @selectedBill.Amount</div>
            </div>

            <div class="payment-options">
                <button class="pay-opt-btn jazz-btn" @onclick='() => ProcessPayment("JazzCash")'>
                    <div class="d-flex align-items-center gap-3">
                        <i class="fa-solid fa-mobile-screen text-danger"></i>
                        <span>JazzCash</span>
                    </div>
                    <i class="fa-solid fa-chevron-right small text-muted"></i>
                </button>

                <button class="pay-opt-btn card-btn" @onclick='() => ProcessPayment("Credit/Debit Card")'>
                    <div class="d-flex align-items-center gap-3">
                        <i class="fa-regular fa-credit-card text-primary"></i>
                        <span>Credit / Debit Card</span>
                    </div>
                    <i class="fa-solid fa-chevron-right small text-muted"></i>
                </button>
            </div>

            <button class="btn-close-modal" @onclick="CloseModal">Cancel Payment</button>
        </div>
    </div>
}

@code {
    // --- Data Variables ---
    List<Bill> pendingBills = new();
    List<Bill> paidBills = new();
    decimal TotalUnpaid = 0;
    decimal LastPaidAmount = 0;
    string MyName = "";

    // --- Modal Logic Variables ---
    bool showPaymentModal = false;
    Bill? selectedBill = null;

    protected override async Task OnInitializedAsync()
    {
        var user = AuthService.CurrentUser;
        if (user == null) user = _supabase.Auth.CurrentUser;

        if (user != null)
        {
            string email = user.Email ?? "";
            if (user.UserMetadata != null && user.UserMetadata.TryGetValue("username", out var nameObj))
                MyName = nameObj?.ToString() ?? email.Split('@')[0];
            else
                MyName = email.Split('@')[0];

            await LoadBills();
        }
    }

    async Task LoadBills()
    {
        var response = await _supabase.From<Bill>()
            .Where(x => x.ConsumerName == MyName)
            .Order("created_at", Supabase.Postgrest.Constants.Ordering.Descending)
            .Get();

        var allBills = response.Models;
        pendingBills = allBills.Where(b => b.Status == "Unpaid").ToList();
        paidBills = allBills.Where(b => b.Status == "Paid").ToList();
        TotalUnpaid = pendingBills.Sum(x => x.Amount);
        LastPaidAmount = paidBills.FirstOrDefault()?.Amount ?? 0;
    }

    // --- 1. Step: Open Modal ---
    void OpenPaymentModal(Bill bill)
    {
        selectedBill = bill;
        showPaymentModal = true;
    }

    void CloseModal()
    {
        showPaymentModal = false;
        selectedBill = null;
    }

    // --- 2. Step: Process Payment (After selecting option) ---
    async Task ProcessPayment(string method)
    {
        if (selectedBill == null) return;

        // Close modal immediately for UX
        showPaymentModal = false;

        try
        {
            // Optional: Show Processing Toast here
            ToastService.ShowToast("Processing", $"Connecting to {method}...", "info");

            // Mock Delay to simulate payment gateway
            await Task.Delay(1500); 

            // Update DB
            selectedBill.Status = "Paid";
            await _supabase.From<Bill>().Update(selectedBill);
            
            // Refresh List
            await LoadBills();

            // Success Message
            ToastService.ShowToast("Payment Successful", $"Paid via {method}!", "success");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Payment Error: " + ex.Message);
            ToastService.ShowToast("Transaction Failed", "Could not complete payment.", "error");
        }
    }

    void GoBack() => Nav.NavigateTo("/Consumer");
}