@page "/bills"
@inject NavigationManager Nav

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<div class="glass-nav">
    <div class="d-flex align-items-center gap-3">
        <i class="fa-solid fa-arrow-left back-btn" @onclick="GoBack"></i>
        <div class="brand-logo">My Bills</div>
    </div>
    <div></div>
</div>

<div class="container-bills">

    <div class="summary-grid">
        <div class="summary-card">
            <div class="summary-label">Total Unpaid</div>
            <div class="summary-val text-danger-neon">Rs 1,850</div>
        </div>
        <div class="summary-card">
            <div class="summary-label">Last Paid</div>
            <div class="summary-val text-neon">Rs 450</div>
        </div>
    </div>

    <div class="section-title">Pending Bills</div>

    <div class="bill-card">
        <div class="bill-info">
            <div class="bill-icon"><i class="fa-solid fa-bottle-water"></i></div>
            <div class="bill-details">
                <h6>Fresh Aqua Supply</h6>
                <p>Order #ORD-9921 • 2 Days ago</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount">Rs 1,200</span>
            <button class="btn-pay">Pay Now</button>
        </div>
    </div>

    <div class="bill-card">
        <div class="bill-info">
            <div class="bill-icon"><i class="fa-solid fa-faucet-drip"></i></div>
            <div class="bill-details">
                <h6>Blue Water Co.</h6>
                <p>Order #ORD-8812 • 5 Days ago</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount">Rs 650</span>
            <button class="btn-pay">Pay Now</button>
        </div>
    </div>

    <div class="section-title mt-5">Payment History</div>

    <div class="bill-card" style="opacity: 0.7;">
        <div class="bill-info">
            <div class="bill-icon" style="color: #92FE9D;"><i class="fa-solid fa-check-circle"></i></div>
            <div class="bill-details">
                <h6>M.Akmal Supplier</h6>
                <p>Order #ORD-7721 • 12 Oct 2024</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount text-muted">Rs 450</span>
            <span class="status-badge status-paid">Paid</span>
        </div>
    </div>

    <div class="bill-card" style="opacity: 0.7;">
        <div class="bill-info">
            <div class="bill-icon" style="color: #92FE9D;"><i class="fa-solid fa-check-circle"></i></div>
            <div class="bill-details">
                <h6>Fresh Aqua Supply</h6>
                <p>Order #ORD-5511 • 05 Oct 2024</p>
            </div>
        </div>
        <div class="bill-action">
            <span class="bill-amount text-muted">Rs 900</span>
            <span class="status-badge status-paid">Paid</span>
        </div>
    </div>
</div>

@code {
    void GoBack()
    {
        Nav.NavigateTo("/Consumer");
    }
}