@page "/order/{type}"

<h1>Order Summary</h1>

<div class="order-card">
    <img src="/images/@($"{type}.jpg")" alt="Selected Product" />

    <div class="order-details">
        <h2>@type</h2>
        <p>Clean premium RO Water Supply.</p>

        <label>Quantity (Litres)</label>
        <input type="number" min="1" @bind="quantity" />

        <label>Delivery Address</label>
        <textarea @bind="address"></textarea>

        <button class="pay-btn" @onclick="PlaceOrder">Place Order</button>
    </div>
</div>

@code {
    [Parameter]
    public string? type { get; set; }

    int quantity = 1;
    string? address;

    void PlaceOrder()
    {
        Console.WriteLine($"Order Placed: {type} — {quantity}L to {address}");
    }
}
