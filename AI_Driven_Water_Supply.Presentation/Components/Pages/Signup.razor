@page "/signup"
@using System.ComponentModel.DataAnnotations
@using AI_Driven_Water_Supply.Application.Interfaces
@using Supabase.Postgrest.Attributes
@using Supabase.Postgrest.Models
@using Microsoft.AspNetCore.WebUtilities
@inject Supabase.Client _supabase
@inject NavigationManager NavigationManager
@rendermode InteractiveServer



<div class="auth-wrapper">
    <EditForm Model="@signupModel" OnValidSubmit="HandleSignup" FormName="SignupForm">
        <DataAnnotationsValidator />

        <div class="auth-card">
            <h2 class="mb-2 fw-bold" style="font-size: 2rem;">Sign Up</h2>
            <div class="role-badge">Joining as: @signupModel.Role</div>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert @(isSuccess ? "alert-success" : "alert-danger") py-2 small mb-3">
                    @message
                </div>
            }

            <div class="mb-3 text-start">
                <label class="form-label">Email</label>
                <InputText @bind-Value="signupModel.Email" class="form-control" type="email" placeholder="Enter email" />
                <ValidationMessage For="@(() => signupModel.Email)" class="text-danger small" />
            </div>

            <div class="mb-3 text-start">
                <label class="form-label">Password</label>
                <InputText @bind-Value="signupModel.Password" class="form-control" type="password" placeholder="••••••••" />
                <ValidationMessage For="@(() => signupModel.Password)" class="text-danger small" />
            </div>

            <button type="submit" class="btn-neon" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Processing...</span>
                }
                else
                {
                    <span>Sign Up</span>
                }
            </button>

            <div class="link-text">
                Already have an account? <a href="/login">Login</a> <br>
                <a href="/get-started" class="text-muted small mt-2 d-block">Change Role</a>
            </div>
        </div>
    </EditForm>
</div>
@code {
    [SupplyParameterFromForm] private SignupModel signupModel { get; set; } = new();

    // ⚠️ FIX: Ye variables wapis laye hain taake HTML crash na ho
    private string message = "";
    private bool isSuccess = false;
    private bool isLoading = false;

    // ⚠️ FIX: Maine yahan se [Inject] ToastService hata diya hai.
    // Ensure karein ke file ke sabse upar "@inject ToastService ToastService" likha ho.

    [Table("profiles")]
    public class UserProfile : BaseModel
    {
        [Column("id")] public string Id { get; set; } = string.Empty;
        [Column("username")] public string Username { get; set; } = string.Empty;
        [Column("role")] public string Role { get; set; } = string.Empty;
    }

    protected override void OnInitialized()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("role", out var r))
        {
            signupModel.Role = r;
        }
        else
        {
            signupModel.Role = "Consumer";
        }
    }

    private async Task HandleSignup()
    {
        isLoading = true;
        message = ""; // Reset message

        try
        {
            string autoUsername = signupModel.Email.Split('@')[0];

            var options = new Supabase.Gotrue.SignUpOptions { Data = new Dictionary<string, object> { { "username", autoUsername } } };
            var session = await _supabase.Auth.SignUp(signupModel.Email, signupModel.Password, options);

            if (session != null && session.User != null)
            {
                var newProfile = new UserProfile
                {
                    Id = session.User.Id,
                    Username = autoUsername,
                    Role = signupModel.Role
                };
                await _supabase.From<UserProfile>().Insert(newProfile);

                isSuccess = true;
                message = "Account created! Redirecting...";
                ToastService.ShowToast("Account Created", "Welcome! Redirecting...", "success");

                await Task.Delay(1500);
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                isSuccess = false;
                ToastService.ShowToast("Signup Failed", message, "error");
            }
        }
        catch (Exception ex)
        {
            isSuccess = false;
            ToastService.ShowToast("Error", "Something went wrong.", "error");
        }
        finally { isLoading = false; }
    }

    public class SignupModel
    {
        [Required, EmailAddress] public string Email { get; set; } = "";
        [Required, MinLength(6)] public string Password { get; set; } = "";
        public string Role { get; set; } = "Consumer";
    }
}