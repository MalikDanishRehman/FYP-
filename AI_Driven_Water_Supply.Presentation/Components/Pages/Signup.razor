@page "/signup"
@using System.ComponentModel.DataAnnotations
@using AI_Driven_Water_Supply.Application.Interfaces
@using Supabase.Postgrest.Attributes
@using Supabase.Postgrest.Models
@using Microsoft.AspNetCore.WebUtilities
@inject Supabase.Client _supabase
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #050505;
        color: white;
        font-family: 'Poppins', sans-serif;
    }

    .signup-wrapper {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at center, #1a1a2e 0%, #000000 100%);
    }

    .signup-container {
        background: #141622;
        color: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0px 4px 20px #0005;
        max-width: 400px;
        width: 100%;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .form-control {
        background: #232638;
        border: 1px solid #333;
        color: white;
        padding: 10px;
    }

        .form-control:focus {
            background: #232638;
            color: white;
            border-color: #b2f94e;
            box-shadow: none;
        }

    .signup-btn {
        background: #b2f94e;
        color: #111;
        border: none;
        padding: 10px;
        width: 100%;
        font-weight: bold;
        border-radius: 6px;
        margin-top: 15px;
    }

        .signup-btn:hover {
            background: #92FE9D;
        }
</style>

<div class="signup-wrapper">
    <EditForm Model="@signupModel" OnValidSubmit="HandleSignup" FormName="SignupForm">
        <DataAnnotationsValidator />

        <div class="signup-container">
            <h2 class="text-center mb-2 fw-bold">Sign Up</h2>

            <div class="text-center mb-4">
                <span class="badge bg-dark border border-secondary text-info px-3 py-2 rounded-pill">
                    Joining as: <strong>@signupModel.Role</strong>
                </span>
            </div>

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert @(isSuccess ? "alert-success" : "alert-danger") text-center py-2 small">@message</div>
            }

            <div class="mb-3">
                <label class="form-label small text-muted">Username</label>
                <InputText @bind-Value="signupModel.Username" class="form-control" placeholder="Ali Khan" />
                <ValidationMessage For="@(() => signupModel.Username)" class="text-danger small" />
            </div>

            <div class="mb-3">
                <label class="form-label small text-muted">Email</label>
                <InputText @bind-Value="signupModel.Email" class="form-control" type="email" placeholder="name@example.com" />
                <ValidationMessage For="@(() => signupModel.Email)" class="text-danger small" />
            </div>

            <div class="mb-3">
                <label class="form-label small text-muted">Password</label>
                <InputText @bind-Value="signupModel.Password" class="form-control" type="password" placeholder="••••••••" />
                <ValidationMessage For="@(() => signupModel.Password)" class="text-danger small" />
            </div>

            <button type="submit" class="signup-btn" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Creating Account...</span>
                }
                else
                {

                    <span>Sign Up</span>
                }
            </button>

            <div class="text-center mt-3">
                <a href="/get-started" class="text-decoration-none text-muted small">Change Role</a> |
                <a href="/login" class="text-decoration-none text-info small">Login</a>
            </div>
        </div>
    </EditForm>
</div>

@code {
    [SupplyParameterFromForm] private SignupModel signupModel { get; set; } = new();
    private string message = "";
    private bool isSuccess = false;
    private bool isLoading = false;

    // Database Table Model
    [Table("profiles")]
    public class UserProfile : BaseModel
    {
        [Column("id")] public string Id { get; set; } = string.Empty;
        [Column("username")] public string Username { get; set; } = string.Empty;
        [Column("role")] public string Role { get; set; } = string.Empty;
    }

    // URL se Role uthana
    protected override void OnInitialized()
    {
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("role", out var r))
        {
            signupModel.Role = r;
        }
        else
        {
            NavigationManager.NavigateTo("/get-started"); // Agar role nahi hai to wapis bhejo
        }
    }

    private async Task HandleSignup()
    {
        isLoading = true;
        message = "";

        try
        {
            // 1. Auth Signup (Email/Pass)
            var options = new Supabase.Gotrue.SignUpOptions { Data = new Dictionary<string, object> { { "username", signupModel.Username } } };
            var session = await _supabase.Auth.SignUp(signupModel.Email, signupModel.Password, options);

            if (session != null && session.User != null)
            {
                // 2. Save Role in Database
                var newProfile = new UserProfile
                {
                    Id = session.User.Id,
                    Username = signupModel.Username,
                    Role = signupModel.Role // 🔥 URL se aya hua role
                };
                await _supabase.From<UserProfile>().Insert(newProfile);

                isSuccess = true;
                message = "Account created! Redirecting to login...";
                await Task.Delay(2000);
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                message = "Signup failed. Try again.";
            }
        }
        catch (Exception ex)
        {
            message = "Error: " + ex.Message;
        }
        finally { isLoading = false; }
    }

    public class SignupModel
    {
        [Required] public string Username { get; set; } = "";
        [Required, EmailAddress] public string Email { get; set; } = "";
        [Required, MinLength(6)] public string Password { get; set; } = "";
        public string Role { get; set; } = "Consumer";
    }
}