@page "/Consumer"
@using AI_Driven_Water_Supply.Presentation
@using Supabase.Postgrest.Models
@inject Supabase.Client _supabase
@inject NavigationManager Nav
@rendermode InteractiveServer

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* === GLOBAL DARK THEME === */
    body {
        margin: 0;
        padding: 0;
        background-color: #050505;
        color: white;
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
        overflow-y: hidden; /* Scroll band taake full app feel aye */
    }

    /* === NAVBAR FIXED TOP === */
    .glass-nav {
        position: fixed;
        top: 0; /* Bilkul upar chipka diya */
        left: 0;
        width: 100%; /* Poori screen ki choraai */
        height: 70px; /* Fixed height */
        background: rgba(20, 20, 20, 0.9); /* Thoda dark background */
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 0 30px; /* Side spacing */
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1000; /* Sabse upar dikhega */
    }

    .brand-logo {
        font-weight: 700;
        font-size: 1.3rem;
        background: linear-gradient(90deg, #00C9FF 0%, #92FE9D 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* === ICONS & DROPDOWNS === */
    .nav-icons {
        display: flex;
        gap: 20px;
        align-items: center;
    }

    .icon-btn {
        position: relative;
        font-size: 1.2rem;
        color: #e0e0e0;
        cursor: pointer;
        transition: 0.3s;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .icon-btn:hover {
            background: rgba(255,255,255,0.1);
            color: #00C9FF;
        }

    .badge-dot {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 8px;
        height: 8px;
        background: #ff4757;
        border-radius: 50%;
        border: 2px solid #1e1e1e;
    }

    /* Dropdown Styling */
    .custom-dropdown {
        position: absolute;
        top: 60px;
        right: 10px; /* Navbar ke neeche */
        background: #18181b;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 12px;
        width: 280px;
        padding: 10px;
        display: none;
        flex-direction: column;
        gap: 5px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.8);
        opacity: 0;
        transform: translateY(-10px);
        transition: 0.3s ease;
    }

        .custom-dropdown.show {
            display: flex;
            opacity: 1;
            transform: translateY(0);
        }

    .dropdown-item-custom {
        padding: 10px;
        border-radius: 8px;
        color: #ccc;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: 0.2s;
        cursor: pointer;
    }

        .dropdown-item-custom:hover {
            background: rgba(255, 255, 255, 0.08);
            color: white;
        }

    .supplier-avatar {
        width: 35px;
        height: 35px;
        background: linear-gradient(45deg, #00C9FF, #92FE9D);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: black;
        font-size: 0.8rem;
    }

    /* === MAIN CONTENT (VIDEO) === */
    .bg-full {
        height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center; /* Vertically Center */
        padding-top: 50px; /* Navbar ke liye jagah */
    }

    video {
        width: 450px; /* Video size */
        max-width: 90%;
        border-radius: 20px;
        /* 👇 LIGHTNING REMOVED (No Box Shadow/Filter) */
        box-shadow: none;
        filter: none;
        /* 👇 MOVED UP (Thora upar shift kiya) */
        transform: translateY(-80px);
    }

    /* === BOTTOM CHAT BAR === */
    .chat-input-container {
        position: absolute;
        bottom: 30px;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .chat-input-box {
        width: 90%;
        max-width: 600px;
        background: #1e1e1e;
        border: 1px solid #333;
        border-radius: 50px;
        padding: 12px 25px;
        display: flex;
        align-items: center;
        gap: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }

        .chat-input-box input {
            flex: 1;
            background: transparent;
            border: none;
            color: white;
            outline: none;
        }

        .chat-input-box button {
            background: none;
            border: none;
            color: #00C9FF;
            font-size: 1.2rem;
            cursor: pointer;
        }

</style>

<div class="glass-nav">
    <div class="brand-logo">
        <i class="fa-solid fa-droplet"></i> AI-Driven
    </div>

    <div class="nav-icons">
        <div style="position: relative;">
            <div class="icon-btn" @onclick="ToggleMsgDropdown">
                <i class="fa-regular fa-comment-dots"></i>
                @if (activeChats.Count > 0)
                {
                    <span class="badge-dot"></span>
                }
            </div>
            <div class="custom-dropdown @(showMsgDropdown ? "show" : "")">
                <h6 class="text-white px-2 py-1 m-0 small text-muted">Active Chats</h6>
                <hr class="my-1 border-secondary" />
                @if (activeChats.Count > 0)
                {
                    @foreach (var chat in activeChats)
                    {
                        <div class="dropdown-item-custom" @onclick="() => OpenChat(chat.Id)">
                            <div class="supplier-avatar">@chat.SupplierName.Substring(0, 1)</div>
                            <div>
                                <div class="fw-bold small">@chat.SupplierName</div>
                                <div style="font-size: 0.65rem; opacity: 0.6;">Order #@chat.Id</div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="p-2 text-center text-muted small">No active chats</div>
                }
            </div>
        </div>

        <div style="position: relative;">
            <div class="icon-btn" @onclick="ToggleProfileDropdown">
                <i class="fa-regular fa-user"></i>
            </div>
            <div class="custom-dropdown @(showProfileDropdown ? "show" : "")" style="width: 200px;">
                <a href="/Cardpage" class="dropdown-item-custom"><i class="fa-solid fa-bag-shopping"></i> My Orders</a>
                <a href="#" class="dropdown-item-custom"><i class="fa-solid fa-receipt"></i> Bills</a>
                <a href="#" class="dropdown-item-custom"><i class="fa-solid fa-gear"></i> Settings</a>
                <hr class="my-1 border-secondary" />
                <a href="#" class="dropdown-item-custom text-danger"><i class="fa-solid fa-power-off"></i> Logout</a>
            </div>
        </div>
    </div>
</div>

<div class="bg-full" @onclick="CloseDropdowns">
    <video id="myVideo" autoplay muted playsinline>
        <source src="/video/blob.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="chat-input-container">
        <div class="chat-input-box">
            <i class="fa-solid fa-magnifying-glass text-muted"></i>
            <input type="text" placeholder="Search or type a message..." />
            <button><i class="bi bi-send-fill"></i></button>
        </div>
    </div>
</div>

@code {
    bool showMsgDropdown = false;
    bool showProfileDropdown = false;
    string MyName = "M.Akmal";
    List<AI_Driven_Water_Supply.Presentation.Order> activeChats = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadActiveChats();
    }

    async Task LoadActiveChats()
    {
        try
        {
            var response = await _supabase.From<AI_Driven_Water_Supply.Presentation.Order>()
                                          .Where(x => x.ConsumerName == MyName)
                                          .Order("created_at", Supabase.Postgrest.Constants.Ordering.Descending)
                                          .Get();
            activeChats = response.Models;
        }
        catch { /* Error Handling */ }
    }

    void ToggleMsgDropdown() { showMsgDropdown = !showMsgDropdown; showProfileDropdown = false; }
    void ToggleProfileDropdown() { showProfileDropdown = !showProfileDropdown; showMsgDropdown = false; }
    void CloseDropdowns() { showMsgDropdown = false; showProfileDropdown = false; }
    void OpenChat(long orderId) { Nav.NavigateTo($"/chat/{orderId}"); }
}

<script>
    function startVideoLoop() {
        const video = document.getElementById('myVideo');
        if(!video) return;
        let reverse = false;
        video.playbackRate = 1;
        video.play();
        setInterval(() => {
            if (reverse) {
                video.currentTime -= 0.05;
                if (video.currentTime <= 0) reverse = false;
            } else {
                video.currentTime += 0.05;
                if (video.currentTime >= video.duration) reverse = true;
            }
        }, 50);
    }
    setTimeout(startVideoLoop, 1000);
</script>