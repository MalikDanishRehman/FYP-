<style>
    /* --- Page Header --- */
    .page-header {
        margin-bottom: 30px;
    }

        .page-header h2 {
            font-weight: 700;
            color: white;
            margin: 0;
        }

        .page-header p {
            color: #888;
            font-size: 0.9rem;
            margin: 5px 0 0;
        }

    /* --- Grid Layout --- */
    .settings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
    }

    /* --- Card Style --- */
    .setting-card {
        background: #0f0f12; /* Darker background to match dashboard */
        border: 1px solid #1f1f1f;
        border-radius: 12px;
        padding: 25px;
        display: flex;
        flex-direction: column;
        height: 100%;
        box-sizing: border-box; /* Ensures padding doesn't break width */
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 10px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

    .card-title {
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0;
    }

    .card-icon {
        color: #BFFF27;
        font-size: 1.1rem;
    }

    /* --- Form Elements --- */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            color: #888;
            font-size: 0.85rem;
            margin-bottom: 8px;
            font-weight: 500;
        }

    .form-control-dark {
        width: 100%;
        background: #1a1d26;
        border: 1px solid #333;
        color: white;
        padding: 12px;
        border-radius: 8px;
        outline: none;
        transition: 0.3s;
        font-size: 0.95rem;
        box-sizing: border-box; /* Prevents overflow */
    }

        .form-control-dark:focus {
            border-color: #BFFF27;
            background: #14161f;
        }

    /* --- Profile Image Placeholder --- */
    .profile-section {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 25px;
    }

    .avatar-circle {
        width: 60px;
        height: 60px;
        background: #BFFF27;
        color: black;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        flex-shrink: 0;
    }

    .profile-text h4 {
        margin: 0;
        color: white;
        font-size: 1rem;
    }

    .profile-text span {
        font-size: 0.8rem;
        color: #888;
    }

    /* --- Toggles --- */
    .toggle-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        gap: 15px; /* Added gap to prevent text overlapping switch */
    }

        .toggle-row:last-child {
            border-bottom: none;
        }

    .switch {
        position: relative;
        display: inline-block;
        width: 40px;
        height: 22px;
        flex-shrink: 0; /* Prevents switch from resizing */
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #333;
        transition: .4s;
        border-radius: 34px;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 16px;
            width: 16px;
            left: 3px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #BFFF27;
    }

        input:checked + .slider:before {
            transform: translateX(18px);
            background-color: black;
        }

    /* --- Save Button --- */
    .btn-save {
        margin-top: auto;
        background: #BFFF27;
        color: black;
        font-weight: 700;
        border: none;
        padding: 12px;
        border-radius: 8px;
        cursor: pointer;
        width: 100%;
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

        .btn-save:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

    /* --- Toast --- */
    .toast-msg {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: #1f1f1f;
        color: #BFFF27;
        border: 1px solid #BFFF27;
        padding: 15px 25px;
        border-radius: 8px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        z-index: 9999;
        animation: slideUp 0.3s ease-out;
    }

    @@keyframes slideUp {
        from {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* === RESPONSIVE DESIGN === */
    @@media (max-width: 768px) {
        .settings-grid {
            grid-template-columns: 1fr; /* Force 1 column on mobile screens */
            gap: 15px;
        }

        .setting-card {
            padding: 15px; /* Reduce padding to save screen space */
        }

        .toast-msg {
            right: 15px;
            left: 15px; /* Stretch toast on mobile */
            bottom: 20px;
            justify-content: center; /* Center the text inside */
        }
    }
</style>

