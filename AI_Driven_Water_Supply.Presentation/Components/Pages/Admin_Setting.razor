    private double commissionRate = 10;
    private double deliveryFee = 150;
    private double taxRate = 2;
    
    private bool isMaintenanceMode = false;
    private bool allowNewVendors = true;
    private bool emailAlerts = true;

    private bool showToast = false;

    // --- Logic ---
    private async Task SaveChanges()
    {
        // Yahan Database Update ka logic ayega (Supabase)
        
        // Show success message
        showToast = true;
        await Task.Delay(3000); // 3 sec baad toast gayab
        showToast = false;
    }
}


