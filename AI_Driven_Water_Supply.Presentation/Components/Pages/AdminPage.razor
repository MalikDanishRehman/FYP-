        color: white;
        margin: 0;
    }

    .stat-sub {
        color: #BFFF27;
        font-size: 0.9rem;
        margin-top: 5px;
        display: inline-block;
        background: rgba(191,255,39,0.1);
        padding: 2px 8px;
        border-radius: 4px;
    }

    .stat-icon {
        position: absolute;
        right: 20px;
        top: 20px;
        font-size: 1.5rem;
        color: rgba(255,255,255,0.05); /* Lighter grey icon background */
    }

    /* Table Styling - Matched with Provider Dashboard */
    .table-section {
        margin-top: 40px;
        background: #1e1e1e; /* Provider theme color */
        padding: 25px;
        border-radius: 15px;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .filter-bar {
        display: flex;
        gap: 15px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .filter-input {
        background: rgba(0, 0, 0, 0.3); /* Provider search/input theme */
        border: 1px solid rgba(255, 255, 255, 0.05);
        padding: 10px 15px;
        color: white;
        border-radius: 8px;
        flex: 1;
        min-width: 150px;
        transition: 0.3s;
    }

        .filter-input:focus {
            outline: none;
            border-color: #BFFF27;
            background: rgba(0, 0, 0, 0.5);
        }

    /* Responsive Table Container */
    .table-responsive {
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .table-dark {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        min-width: 600px;
    }

        .table-dark th {
            text-align: left;
            color: #888;
            font-size: 0.8rem;
            padding: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            text-transform: uppercase;
            white-space: nowrap;
        }

        .table-dark td {
            padding: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.02);
            color: #ddd;
            font-size: 0.95rem;
            white-space: nowrap;
        }

    .status-dot {
        height: 8px;
        width: 8px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }

    .st-completed {
        background-color: #BFFF27;
        box-shadow: 0 0 5px #BFFF27;
    }

    .st-pending {
        background-color: #ff9f43;
    }

    /* === RESPONSIVE DESIGN === */
    @@media (max-width: 768px) {
