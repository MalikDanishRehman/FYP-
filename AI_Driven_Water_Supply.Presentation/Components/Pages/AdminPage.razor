<style>
    /* Admin Layout Wrapper */
    .admin-wrapper {
        display: flex;
        min-height: 80vh; /* Adjust based on your header/footer */
        gap: 20px;
    }

    /* --- Sidebar Styling --- */
    .admin-sidebar {
        width: 260px;
        background: rgba(20, 25, 40, 0.7); /* Thora dark glass effect */
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        flex-shrink: 0; /* Sidebar shrink na ho */
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .sidebar-item {
        margin-bottom: 10px;
    }

    .sidebar-link {
        display: flex;
        align-items: center;
        padding: 12px 15px;
        color: #aaa;
        text-decoration: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .sidebar-link i {
            width: 25px;
            font-size: 1.1rem;
        }

        /* Hover & Active State */
        .sidebar-link:hover {
            background: rgba(255, 255, 255, 0.05);
            color: white;
            transform: translateX(5px);
        }

        .sidebar-link.active {
            background: #BFFF27;
            color: black; /* Black text on Neon */
            font-weight: 700;
            box-shadow: 0 0 15px rgba(191, 255, 39, 0.3);
        }

    /* --- Main Content Area --- */
    .admin-content {
        flex-grow: 1;
        width: 100%;
    }

    /* Stats Cards Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: rgba(23, 26, 43, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: 0.3s;
    }

        .stat-card:hover {
            border-color: #BFFF27;
            transform: translateY(-5px);
        }

    .stat-info h3 {
        margin: 0;
        font-size: 1.8rem;
        color: white;
        font-weight: 700;
    }

    .stat-info p {
        margin: 0;
        color: #888;
        font-size: 0.9rem;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        background: rgba(191, 255, 39, 0.1);
        color: #BFFF27;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    /* Recent Orders Table */
    .table-container {
        background: rgba(23, 26, 43, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 16px;
        padding: 20px;
        overflow-x: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        color: #ddd;
    }

        .custom-table th {
            text-align: left;
            padding: 15px;
            color: #BFFF27;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            font-weight: 600;
        }

        .custom-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(255,255,255,0.05);
        }

    .status-badge {
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        background: rgba(255,255,255,0.1);
    }

        .status-badge.completed {
            background: rgba(46, 204, 113, 0.2);
            color: #2ecc71;
        }

        .status-badge.pending {
            background: rgba(255, 165, 2, 0.2);
            color: #ffa502;
        }

</style>


