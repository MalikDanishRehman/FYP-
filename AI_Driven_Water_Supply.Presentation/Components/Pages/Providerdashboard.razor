<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    /* --- 1. OLD DESIGN STYLES (Restored) --- */
    .dashboard-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
        margin-bottom: 20px;
    }

    .welcome-text {
        font-size: 1.8rem;
        font-weight: bold;
        color: white;
        margin: 0;
    }

        .welcome-text span {
            color: var(--accent-green);
        }

    .nav-right {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .icon-btn {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        text-decoration: none;
        position: relative;
        cursor: pointer;
        transition: 0.3s;
    }

        .icon-btn:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

    .notify-dot {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 8px;
        height: 8px;
        background: #ff4d4d;
        border-radius: 50%;
    }

    .profile-container {
        position: relative;
        cursor: pointer;
    }

    .profile-img {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid var(--accent-green);
    }

    .status-dot {
        position: absolute;
        bottom: 2px;
        right: 2px;
        width: 12px;
        height: 12px;
        background: #00e676;
        border: 2px solid #121212;
        border-radius: 50%;
    }

    .revenue-card {
        background: linear-gradient(135deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.02) 100%);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        padding: 25px;
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
    }

    .revenue-amount {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 10px 0;
        color: white;
    }

    /* Stats Grid (Old) */
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-top: 20px;
    }

    .stat-card {
        background: #1e1e1e;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .stat-label {
        color: #888;
        font-size: 0.9rem;
    }

    /* --- 2. NEW CHART STYLES (Kept as requested) --- */
    .ai-dashboard-section {
        height: 60vh; /* Controlled Height */
        min-height: 400px;
        max-height: 600px;
        display: flex;
        flex-direction: column;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    .ai-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        flex-shrink: 0;
    }

    .ai-title h4 {
        margin: 0;
        color: white;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.1rem;
    }

    .ai-title p {
        margin: 0;
        color: #888;
        font-size: 0.8rem;
    }

    .time-selector {
        background: rgba(0, 0, 0, 0.3);
        padding: 4px;
        border-radius: 12px;
        display: flex;
        gap: 5px;
    }

    .time-btn {
        background: transparent;
        border: none;
        color: #888;
        padding: 5px 12px;
        font-size: 0.8rem;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .time-btn.active {
            background: var(--accent-green);
            color: #000;
            font-weight: bold;
        }

    .chart-wrapper {
        flex: 1;
        position: relative;
        width: 100%;
        min-height: 0;
    }

    .ai-insight {
        margin-top: 10px;
        padding-top: 10px;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        color: #ccc;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 10px;
        flex-shrink: 0;
    }

    .insight-badge {
        background: rgba(255, 189, 74, 0.2);
        color: #ffbd4a;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: bold;
    }

    /* Sidebar Styles (Old) */
    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.6);
        z-index: 998;
        opacity: 0;
        visibility: hidden;
        transition: 0.3s;
    }

        .sidebar-overlay.active {
            opacity: 1;
            visibility: visible;
        }

    .side-panel {
        position: fixed;
        top: 0;
        right: -320px;
        width: 320px;
        height: 100%;
        background: #121212;
        z-index: 999;
        transition: 0.3s;
        padding: 20px;
        display: flex;
        flex-direction: column;
        border-left: 1px solid rgba(255,255,255,0.1);
    }

        .side-panel.open {
            right: 0;
        }

    .chat-item {
        display: flex;
        align-items: center;
        padding: 15px;
        border-radius: 12px;
        cursor: pointer;
        transition: 0.2s;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

        .chat-item:hover {
            background: rgba(255,255,255,0.05);
        }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #333;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-right: 12px;
        color: white;
        position: relative;
    }

    .online-dot {
        width: 10px;
        height: 10px;
        background: #00e676;
        border-radius: 50%;
        position: absolute;
        bottom: 0;
        right: 0;
        border: 2px solid #121212;
    }

    .msg-content h6 {
        margin: 0;
        font-size: 0.95rem;
        color: white;
    }

    .msg-content p {
        margin: 0;
        font-size: 0.8rem;
        color: #888;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 140px;
    }

    .msg-time {
        font-size: 0.7rem;
        color: #666;
        margin-left: auto;
    }

</style>

<div class="page-wrapper">
    <div class="container">

        <div class="dashboard-nav">
            <div class="nav-left">
                <h2 class="welcome-text">Hi, <span>@UserName</span>! 👋</h2>
            </div>
            <div class="nav-right">
                <div class="icon-btn" @onclick="ToggleSidebar" title="Messages">
                    <i class="fa-regular fa-comment-dots"></i>
                    @if (chatList.Count > 0)
                    {
                        <div class="notify-dot"></div>
                    }
                </div>
                <a href="/provider-reviews" class="icon-btn" title="My Reputation">
                    <i class="fa-solid fa-star text-warning"></i>
                </a>
                <a href="/supplier-bills" class="icon-btn" title="Earnings & Bills">
                    <i class="fa-solid fa-file-invoice-dollar" style="color: var(--accent-green);"></i>
                </a>
                <a href="/attendance" class="icon-btn" title="Staff Attendance">
                    <i class="fa-solid fa-clipboard-user" style="color: #c767da;"></i>
                </a>
                <a href="/profilepro" class="profile-container" title="My Profile">
                    <img src="@ProfileImageUrl" alt="Profile" class="profile-img">
                    <div class="status-dot"></div>
                </a>
            </div>
        </div>

        <div class="header-section">
            <p class="text-muted">Here's your business overview.</p>
            <div class="revenue-card">
                <span class="revenue-label"><i class="fa-solid fa-chart-line me-2 text-success"></i> Total Estimated Revenue</span>
                <h1 class="revenue-amount">Rs @totalRevenue</h1>
                <p class="text-muted mb-0 small">Updated just now</p>
            </div>
        </div>

        <div class="ai-dashboard-section">
            <div class="ai-header">
                <div class="ai-title">
                    <h4><i class="fa-solid fa-wand-magic-sparkles text-warning"></i> Demand AI</h4>
                    <p>Forecast based on weather & history</p>
                </div>
                <div class="time-selector">
                    <button class="time-btn @(activeTab == "Tomorrow" ? "active" : "")" @onclick='() => SwitchTab("Tomorrow")'>Tomorrow</button>
                    <button class="time-btn @(activeTab == "Week" ? "active" : "")" @onclick='() => SwitchTab("Week")'>Next 7 Days</button>
                    <button class="time-btn @(activeTab == "Month" ? "active" : "")" @onclick='() => SwitchTab("Month")'>Month</button>
                </div>
            </div>

            <div class="chart-wrapper">
                <canvas id="aiPredictionChart"></canvas>
            </div>

            <div class="ai-insight">
                <span class="insight-badge">AI ALERT</span>
                <span id="ai-text">High demand expected tomorrow around 2:00 PM.</span>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value text-primary">@chatList.Count</div>
                <div class="stat-label">Active Orders</div>
            </div>
            <div class="stat-card">
                <div class="stat-value text-warning">0</div>
                <div class="stat-label">Completed</div>
            </div>
        </div>
    </div>

    <div class="sidebar-overlay @(isSidebarOpen ? "active" : "")" @onclick="ToggleSidebar"></div>

    <div class="side-panel @(isSidebarOpen ? "open" : "")">
        <div class="chat-header mb-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="fw-bold m-0 text-white">Inbox</h4>
                <small class="text-muted">You have @chatList.Count active chats</small>
            </div>
            <i class="fa-solid fa-xmark fs-4 text-muted" style="cursor: pointer;" @onclick="ToggleSidebar"></i>
        </div>

        <div class="chat-list" style="overflow-y: auto; flex: 1;">
            @if (isLoading)
            {
                <div class="text-center text-muted mt-5">
                    <div class="spinner-border text-success spinner-border-sm" role="status"></div>
                </div>
            }
            else if (chatList.Count == 0)
            {
                <div class="text-center text-muted mt-5">
                    <p class="small">No active orders yet.</p>
                </div>
            }
            else
            {
                @foreach (var chat in chatList)
                {
                    <div class="chat-item" @onclick="() => OpenChat(chat.OrderId)">
                        <div class="avatar">
                            @(!string.IsNullOrEmpty(chat.SenderName) ? chat.SenderName.Substring(0, 1).ToUpper() : "U")
                            <div class="online-dot"></div>
                        </div>
                        <div class="msg-content">
                            <h6>@chat.SenderName</h6>
                            <p>@chat.Content</p>
                        </div>
                        <span class="msg-time">@chat.CreatedAt.ToLocalTime().ToString("hh:mm tt")</span>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private string UserName = "Loading...";
    private string ProfileImageUrl = "/images/fallbackimg.jpg";
    private bool isSidebarOpen = false;
    private bool isLoading = true;
    private int totalRevenue = 0;
    private List<Message> chatList = new List<Message>();

    // Chart Variable
    private string activeTab = "Week";

    [Table("profiles")]
    public class Profile : BaseModel
    {
        [Column("id")] public string Id { get; set; } = "";
        [Column("username")] public string Username { get; set; } = "";
        [Column("profilepic")] public string ProfilePic { get; set; } = "";
    }

    protected override async Task OnInitializedAsync()
    {
        var user = AuthService.CurrentUser;
        if (user == null) { await AuthService.TryRefreshSession(); user = AuthService.CurrentUser; }

        if (user != null)
        {
            await SetDynamicData(user);
            StateHasChanged();
            await LoadMessages();
            isLoading = false;
            StateHasChanged();
        }
        else
        {
            Nav.NavigateTo("/login");
        }
    }

    private async Task SetDynamicData(Supabase.Gotrue.User user)
    {
        string fetchedName = "";
        try
        {
            var response = await _supabase.From<Profile>().Where(x => x.Id == user.Id).Get();
            var profile = response.Models.FirstOrDefault();
            if (profile != null)
            {
                fetchedName = profile.Username;
                if (!string.IsNullOrEmpty(profile.ProfilePic))
                {
                    ProfileImageUrl = _supabase.Storage.From("Avatar").GetPublicUrl(profile.ProfilePic);
                }
            }
        }
        catch { }

        if (string.IsNullOrEmpty(fetchedName) && user.UserMetadata != null)
            if (user.UserMetadata.TryGetValue("username", out var nameObj)) fetchedName = nameObj?.ToString();

        if (string.IsNullOrEmpty(fetchedName) && !string.IsNullOrEmpty(user.Email))
            fetchedName = user.Email.Split('@')[0];

        UserName = string.IsNullOrEmpty(fetchedName) ? "Provider" : fetchedName;
    }

    private async Task LoadMessages()
    {
        try
        {
            if (UserName == "Loading..." || UserName == "Provider") return;
            var response = await _supabase.From<Message>().Where(x => x.ReceiverName == UserName).Order("created_at", Supabase.Postgrest.Constants.Ordering.Descending).Get();
            chatList = response.Models.GroupBy(m => m.OrderId).Select(g => g.First()).ToList();
            totalRevenue = chatList.Count * 1200;
        }
        catch { }
    }

    private void ToggleSidebar() => isSidebarOpen = !isSidebarOpen;
    private void OpenChat(long orderId) => Nav.NavigateTo($"/chat/{orderId}");

    // --- Chart Logic ---
    private async Task SwitchTab(string tab)
    {
        activeTab = tab;
        await JS.InvokeVoidAsync("updatePredictionChart", activeTab);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("renderPredictionChart");
        }
    }
}

<script>
    let aiChart;

    function renderPredictionChart() {
        const ctx = document.getElementById('aiPredictionChart');
        if (!ctx) return;

        const gradPast = ctx.getContext('2d').createLinearGradient(0, 0, 0, 400);
        gradPast.addColorStop(0, 'rgba(191, 255, 39, 0.4)'); gradPast.addColorStop(1, 'rgba(191, 255, 39, 0)');

        const gradFuture = ctx.getContext('2d').createLinearGradient(0, 0, 0, 400);
        gradFuture.addColorStop(0, 'rgba(255, 189, 74, 0.5)'); gradFuture.addColorStop(1, 'rgba(255, 189, 74, 0)');

        const config = {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [
                    {
                        label: 'History',
                        data: [12, 15, 10, 14, 18, null, null],
                        borderColor: '#BFFF27', backgroundColor: gradPast, fill: true, tension: 0.4, pointRadius: 4
                    },
                    {
                        label: 'Prediction',
                        data: [null, null, null, null, 18, 22, 25],
                        borderColor: '#FFBD4A', backgroundColor: gradFuture, fill: true, tension: 0.4, borderDash: [5, 5], pointRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { color: 'rgba(255,255,255,0.05)' }, ticks: { color: '#888' } },
                    y: { display: false }
                }
            }
        };
        aiChart = new Chart(ctx, config);
    }

    function updatePredictionChart(mode) {
        if (!aiChart) return;

        let labels, pastData, futureData, note;

        if (mode === 'Tomorrow') {
            labels = ['8 AM', '10 AM', '12 PM', '2 PM', '4 PM', '6 PM', '8 PM'];
            pastData = [null, null, null, null, null, null, null];
            futureData = [5, 12, 25, 30, 20, 15, 10];
            note = "Peak demand expected at 2:00 PM due to temperature rise.";
        }
        else if (mode === 'Week') {
            labels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
            pastData = [12, 15, 10, 14, 18, null, null];
            futureData = [null, null, null, null, 18, 22, 25];
            note = "Weekend demand surge expected (Upcoming Wedding Season).";
        }
        else if (mode === 'Month') {
            labels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
            pastData = [150, 180, null, null];
            futureData = [null, 180, 210, 240];
            note = "Overall 20% growth projected for next month.";
        }

        aiChart.data.labels = labels;
        aiChart.data.datasets[0].data = pastData;
        aiChart.data.datasets[1].data = futureData;
        aiChart.update();
        document.getElementById('ai-text').innerText = note;
    }
</script>