@page "/ProviderDashboard"
@using AI_Driven_Water_Supply.Application.Interfaces
@using Supabase.Gotrue
@using AI_Driven_Water_Supply.Presentation
@inject IAuthService AuthService
@inject Supabase.Client _supabase
@inject NavigationManager Nav
@inject IJSRuntime JS

@rendermode InteractiveServer

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    /* Styles (Same as before) */
    :root {
        --bg-dark: #0b0d17;
        --card-bg: #171a2b;
        --accent-green: #BFFF27;
        --text-white: #e4e6eb;
        --text-muted: #a0a3bd;
    }

    body {
        background-color: var(--bg-dark);
        color: var(--text-white);
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
    }

    .dashboard-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 0;
    }

    .icon-btn {
        background: var(--card-bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-white);
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: 0.3s;
        position: relative;
    }

        .icon-btn:hover {
            background: var(--accent-green);
            color: #000;
            transform: translateY(-2px);
        }

    .notify-dot {
        position: absolute;
        top: 10px;
        right: 12px;
        width: 8px;
        height: 8px;
        background-color: #ff4757;
        border-radius: 50%;
        border: 1px solid var(--card-bg);
    }

    .header-section {
        margin-bottom: 30px;
    }

    .welcome-text {
        font-size: 1.8rem;
        font-weight: 700;
    }

        .welcome-text span {
            color: var(--accent-green);
        }

    .revenue-card {
        background: linear-gradient(135deg, #1f233a 0%, #171a2b 100%);
        padding: 25px;
        border-radius: 20px;
        border: 1px solid rgba(191, 255, 39, 0.1);
        margin-bottom: 20px;
    }

    .revenue-amount {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--accent-green);
        margin: 10px 0;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        margin-top: 20px;
    }

    .stat-card {
        background: var(--card-bg);
        padding: 20px;
        border-radius: 16px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: 0.3s;
    }

        .stat-card:hover {
            border-color: var(--accent-green);
            transform: translateY(-5px);
        }

    .chart-container {
        background: var(--card-bg);
        padding: 20px;
        border-radius: 20px;
        margin-top: 20px;
        height: 250px;
    }

    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        z-index: 998;
        opacity: 0;
        visibility: hidden;
        transition: 0.3s ease;
    }

        .sidebar-overlay.active {
            opacity: 1;
            visibility: visible;
        }

    .side-panel {
        position: fixed;
        top: 0;
        right: -350px;
        width: 320px;
        height: 100vh;
        background: #1c2033;
        z-index: 999;
        transition: right 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        padding: 20px;
        box-shadow: -5px 0 30px rgba(0,0,0,0.6);
        border-left: 1px solid rgba(255,255,255,0.08);
        display: flex;
        flex-direction: column;
    }

        .side-panel.open {
            right: 0;
        }

    .chat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .chat-item {
        display: flex;
        align-items: center;
        padding: 12px;
        border-radius: 12px;
        cursor: pointer;
        transition: 0.2s;
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

        .chat-item:hover {
            background: rgba(255,255,255,0.05);
        }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: #333;
        margin-right: 12px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #fff;
        background: #444;
    }

    .online-dot {
        width: 10px;
        height: 10px;
        background: #2ecc71;
        border-radius: 50%;
        position: absolute;
        bottom: 0;
        right: 0;
        border: 2px solid #1c2033;
    }

    .msg-content h6 {
        margin: 0;
        font-size: 0.95rem;
        font-weight: 600;
        color: #fff;
    }

    .msg-content p {
        margin: 0;
        font-size: 0.8rem;
        color: var(--text-muted);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 150px;
    }

    .msg-time {
        font-size: 0.7rem;
        color: #666;
        margin-left: auto;
    }
</style>

<div class="container pb-5">
    <div class="dashboard-nav">
        <div><div class="icon-btn"><i class="fa-solid fa-bars"></i></div></div>
        <div class="d-flex gap-3">
            <div class="icon-btn" @onclick="ToggleSidebar">
                <i class="fa-regular fa-comment"></i>
                @if (chatList.Count > 0)
                {
                    <div class="notify-dot"></div>
                }
            </div>
            <div class="icon-btn" @onclick="HandleLogout">
                <i class="fa-solid fa-power-off text-danger"></i>
            </div>
        </div>
    </div>

    <div class="header-section">
        <h2 class="welcome-text">Hi, <span>@UserName</span>! 👋</h2>
        <p class="text-muted">Here's your dashboard overview.</p>
        <div class="revenue-card shadow-lg">
            <h1 class="revenue-amount">Rs @totalRevenue</h1>
            <p class="text-muted mb-0">Total Estimated Revenue</p>
        </div>
    </div>

    <div class="chart-container"><canvas id="revenueChart"></canvas></div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value text-primary">@chatList.Count</div>
            <div class="stat-label">Active Orders</div>
        </div>
        <div class="stat-card">
            <div class="stat-value text-warning">0</div>
            <div class="stat-label">Completed</div>
        </div>
    </div>
</div>

<div class="sidebar-overlay @(isSidebarOpen ? "active" : "")" @onclick="ToggleSidebar"></div>

<div class="side-panel @(isSidebarOpen ? "open" : "")">
    <div class="chat-header">
        <h4 class="fw-bold m-0">Orders & Chats <span class="badge bg-success rounded-pill fs-6">@chatList.Count</span></h4>
        <i class="fa-solid fa-xmark fs-4" style="cursor: pointer;" @onclick="ToggleSidebar"></i>
    </div>

    <div class="chat-list" style="overflow-y: auto;">
        @if (isLoading)
        {
            <div class="text-center text-muted mt-4">
                <div class="spinner-border text-success" role="status"></div>
                <p class="mt-2">Loading messages...</p>
            </div>
        }
        else if (chatList.Count == 0)
        {
            <div class="text-center text-muted mt-5">
                <i class="fa-regular fa-folder-open fs-1 mb-3"></i>
                <p>No active orders yet.</p>
            </div>
        }
        else
        {
            @foreach (var chat in chatList)
            {
                <div class="chat-item" @onclick="() => OpenChat(chat.OrderId)">
                    <div class="avatar">
                        @(!string.IsNullOrEmpty(chat.SenderName) ? chat.SenderName.Substring(0, 1).ToUpper() : "U")
                        <div class="online-dot"></div>
                    </div>
                    <div class="msg-content">
                        <h6>@chat.SenderName</h6>
                        <p>@chat.Content</p>
                    </div>
                    <span class="msg-time">@chat.CreatedAt.ToString("hh:mm tt")</span>
                </div>
            }
        }
    </div>

    <div class="mt-auto text-center pt-3">
        <small class="text-muted">Click a user to start chatting</small>
    </div>
</div>

@code {
    private string UserName = "Provider";
    private bool isSidebarOpen = false;
    private bool isLoading = true;
    private int totalRevenue = 0;

    private List<Message> chatList = new List<Message>();

    protected override async Task OnInitializedAsync()
    {
        var user = AuthService.CurrentUser;
        if (user != null)
        {
            if (user.UserMetadata != null && user.UserMetadata.TryGetValue("username", out var nameObj))
                UserName = nameObj?.ToString() ?? "Fresh Aqua";
            else
                UserName = "Fresh Aqua";
        }
        await LoadMessages();
    }

    private async Task LoadMessages()
    {
        isLoading = true;
        try
        {
            // Ab ye Message class 'Message.cs' se uthayega
            var response = await _supabase
                .From<Message>()
                .Where(x => x.ReceiverName == UserName)
                .Order("created_at", Supabase.Postgrest.Constants.Ordering.Descending)
                .Get();

            var allMessages = response.Models;

            chatList = allMessages
                        .GroupBy(m => m.OrderId)
                        .Select(g => g.First())
                        .ToList();

            totalRevenue = chatList.Count * 1200;
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error fetching messages: " + ex.Message);
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleSidebar()
    {
        isSidebarOpen = !isSidebarOpen;
    }

    private void OpenChat(long orderId)
    {
        Nav.NavigateTo($"/chat/{orderId}");
    }

    private async Task HandleLogout()
    {
        await AuthService.SignOut();
        Nav.NavigateTo("/login");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("eval", @"
                var ctx = document.getElementById('revenueChart');
                if(ctx) {
                    new Chart(ctx.getContext('2d'), {
                        type: 'line',
                        data: {
                            labels: ['M','T','W','T','F','S','S'],
                            datasets: [{
                                label: 'Revenue', data: [12, 19, 3, 5, 2, 3, 10],
                                borderColor: '#BFFF27', tension: 0.4, fill: true,
                                backgroundColor: 'rgba(191, 255, 39, 0.1)'
                            }]
                        },
                        options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } }, scales: { x: { display: false }, y: { display: false } } }
                    });
                }
            ");
        }
    }
}