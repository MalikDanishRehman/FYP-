@page "/Onboarding"
@using AI_Driven_Water_Supply.Application.Interfaces
@inject IAuthService AuthService
@inject NavigationManager Nav

@* 👇 YEH LINE SABSE ZAROORI HAI *@
@rendermode InteractiveServer

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        background-color: #0b0d17;
        color: #e4e6eb;
        font-family: 'Poppins', sans-serif;
    }

    .onboard-wrapper {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        flex-direction: column; /* Error message ke liye */
    }

    .option-card {
        background-color: #171a2b;
        border-radius: 16px;
        padding: 40px 30px;
        transition: .3s ease;
        border: 1px solid rgba(255, 255, 255, 0.08);
        cursor: pointer;
    }

        .option-card:hover {
            transform: translateY(-6px);
            border-color: #b2f94e;
            background-color: #1c2033;
        }

    .option-title {
        color: #b2f94e;
        font-weight: 600;
        margin-top: 15px;
        font-size: 1.3rem;
    }

    /* Disable click when loading */
    .disabled-card {
        opacity: 0.5;
        pointer-events: none;
    }
</style>

<div class="onboard-wrapper">
    <div class="container">
        <h2 class="fw-bold text-white mb-2">Who are you?</h2>
        <p class="mb-5 text-secondary">Select your role to continue</p>

        @* 👇 DEBUG: ERROR BOX *@
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mx-auto" style="max-width: 500px;">
                <strong>Error:</strong> @errorMessage
            </div>
        }

        @* 👇 LOADING SPINNER *@
        @if (isLoading)
        {
            <div class="mb-3 text-warning">
                <span class="spinner-border spinner-border-sm"></span> Saving Preference...
            </div>
        }

        <div class="row justify-content-center g-4">

            <div class="col-md-4 col-10">
                <div class="option-card shadow-lg @(isLoading ? "disabled-card" : "")"
                     @onclick='() => HandleRoleSelection("Consumer")'>
                    <i class="bi bi-person-circle fs-1 text-success"></i>
                    <h4 class="option-title">Consumer</h4>
                    <p>I want to use the service</p>
                </div>
            </div>

            <div class="col-md-4 col-10">
                <div class="option-card shadow-lg @(isLoading ? "disabled-card" : "")"
                     @onclick='() => HandleRoleSelection("Provider")'>
                    <i class="bi bi-briefcase-fill fs-1 text-info"></i>
                    <h4 class="option-title">Provider</h4>
                    <p>I want to provide the service</p>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    private bool isLoading = false;
    private string errorMessage = "";

    protected override void OnInitialized()
    {
        // Debugging: Page load hote hi check karo
        Console.WriteLine("🟢 Onboarding Page Loaded.");
    }

    private async Task HandleRoleSelection(string role)
    {
        isLoading = true;
        errorMessage = ""; // Reset error
        Console.WriteLine($"🖱️ Button Clicked: {role}");

        // UI Update Force Karo
        StateHasChanged();

        // Thoda delay taake UI update ho jaye
        await Task.Delay(100);

        try
        {
            // Service Call
            bool success = await AuthService.UpdateUserRole(role);

            Console.WriteLine($"🔙 Service Result: {success}");

            if (success)
            {
                Console.WriteLine("🚀 Redirecting...");
                if (role == "Consumer") Nav.NavigateTo("/Consumer");
                else Nav.NavigateTo("/ProviderDashboard");
            }
            else
            {
                // Agar false aaya to error set karo
                errorMessage = "Failed to save role. Check Output Window for 'User Null' error.";
                Console.WriteLine("❌ Save Failed (Service returned false)");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Exception: {ex.Message}";
            Console.WriteLine($"🔥 CRITICAL ERROR: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}