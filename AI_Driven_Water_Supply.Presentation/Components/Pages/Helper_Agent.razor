@page "/Helper_Agent"
@using System.Text.Json
@using System.Text
@using System.Timers
@inject NavigationManager Nav
@inject AI_Driven_Water_Supply.Application.Interfaces.IAuthService AuthService
@inject IJSRuntime JS
@inject HttpClient Http
@rendermode InteractiveServer

<style>
    /* --- CORE THEME --- */
    :root {
        --primary-glow: #00C9FF;
        --secondary-glow: #92FE9D;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #000000;
        color: white;
        font-family: 'Inter', sans-serif;
        overflow: hidden;
        height: 100vh;
    }

    /* --- YE HAIN WO CARDS KI SETTINGS JO PYTHON BHEJ RAHA HAI --- */
    .supplier-card {
        background: rgba(30, 35, 45, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s ease;
        margin-bottom: 15px;
        max-width: 300px; /* Card size limit */
        margin-left: auto;
        margin-right: auto;
    }

        .supplier-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px rgba(0, 201, 255, 0.3);
        }

    .card-img-wrapper {
        height: 140px;
        width: 100%;
        position: relative;
    }

        .card-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .rating-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0,0,0,0.7);
        padding: 4px 8px;
        border-radius: 8px;
        backdrop-filter: blur(4px);
        font-size: 0.8rem;
    }

    .card-body-custom {
        padding: 15px;
        text-align: center;
    }

        .card-body-custom h5 {
            margin: 0 0 5px 0;
            color: white;
            font-weight: bold;
        }

        .card-body-custom p {
            color: #aaa;
            font-size: 0.85rem;
            margin-bottom: 12px;
        }

    .select-btn {
        display: block;
        width: 100%;
        padding: 10px 0;
        background: linear-gradient(90deg, var(--primary-glow), var(--secondary-glow));
        color: black;
        font-weight: bold;
        text-decoration: none;
        border-radius: 8px;
        transition: opacity 0.2s;
    }

        .select-btn:hover {
            opacity: 0.9;
            color: black;
        }

    /* --- REST OF YOUR CSS --- */
    .glass-nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 80px;
        background: black;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 1000;
    }

    .brand-logo {
        font-weight: 800;
        font-size: 1.5rem;
        background: linear-gradient(90deg, var(--primary-glow) 0%, var(--secondary-glow) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .nav-icons {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .icon-btn {
        font-size: 1.3rem;
        color: #888;
        cursor: pointer;
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .profile-trigger {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        cursor: pointer;
        overflow: hidden;
        border: 2px solid transparent;
        background: linear-gradient(#000, #000) padding-box, linear-gradient(45deg, var(--primary-glow), var(--secondary-glow)) border-box;
    }

        .profile-trigger img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .custom-dropdown {
        position: absolute;
        top: 65px;
        right: 0;
        background: #0a0a0a;
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 16px;
        width: 220px;
        display: none;
        flex-direction: column;
        padding: 10px;
        z-index: 2000;
    }

        .custom-dropdown.show {
            display: flex;
        }

    .chat-item {
        padding: 10px;
        color: #ccc;
        text-decoration: none;
        display: block;
    }

        .chat-item:hover {
            background: rgba(255,255,255,0.1);
            color: white;
            border-radius: 8px;
        }

    .hero-container {
        height: 100vh;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    #myVideo {
        margin-top: -150px;
        width: 600px;
        max-width: 90%;
        mix-blend-mode: screen;
        transition: all 1.5s ease;
    }

    .video-hidden {
        opacity: 0 !important;
        filter: blur(20px);
        transform: scale(1.2);
    }

    .chat-scroll-area {
        position: absolute;
        top: 90px;
        bottom: 20%;
        width: 100%;
        max-width: 800px;
        overflow-y: auto;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 20px;
        opacity: 0;
        visibility: hidden;
        transition: opacity 1s ease 0.5s;
        scrollbar-width: none;
    }

        .chat-scroll-area.active {
            opacity: 1;
            visibility: visible;
        }

    .msg-bubble {
        max-width: 85%;
        padding: 16px 22px;
        border-radius: 20px;
        font-size: 1rem;
        line-height: 1.6;
        animation: slideUp 0.4s ease forwards;
    }

    .msg-user {
        align-self: flex-end;
        background: rgba(0, 201, 255, 0.15);
        border: 1px solid rgba(0, 201, 255, 0.2);
        border-bottom-right-radius: 4px;
    }

    .msg-ai {
        align-self: flex-start;
        background: transparent;
        color: #e0e0e0;
        padding-left: 0;
        width: 100%;
    }

    .chat-input-wrapper {
        position: absolute;
        bottom: 15%;
        width: 100%;
        display: flex;
        justify-content: center;
        z-index: 100;
        transition: bottom 0.8s ease;
    }

    .chat-input-box {
        width: 85%;
        max-width: 600px;
        background: rgba(20, 20, 20, 0.8);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 16px 24px;
        display: flex;
        gap: 15px;
        align-items: center;
    }

        .chat-input-box input {
            flex: 1;
            background: transparent;
            border: none;
            color: white;
            outline: none;
            font-size: 1rem;
        }

    .send-btn {
        background: linear-gradient(135deg, var(--primary-glow), var(--secondary-glow));
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    @@keyframes slideUp {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="glass-nav">
    <div class="brand-logo"><i class="fa-solid fa-droplet"></i> HydroAI</div>
    <div class="nav-icons">
        <div style="position: relative;">
            <div class="profile-trigger" @onclick="ToggleProfileDropdown">
                <img src="@ProfileImageUrl" alt="Profile">
            </div>
            <div class="custom-dropdown @(showProfileDropdown ? "show" : "")">
                <div class="px-3 py-2 text-center">
                    <span class="text-white fw-bold d-block">@MyName</span>
                    <span class="text-muted small">Consumer</span>
                </div>
                <a href="#" class="chat-item" style="color: #ff4757;" @onclick="HandleLogout">
                    <i class="fa-solid fa-power-off me-2"></i> Logout
                </a>
            </div>
        </div>
    </div>
</div>

<div class="hero-container" @onclick="CloseDropdowns">

    <video id="myVideo" class="@(hasChatStarted ? "video-hidden" : "")" autoplay muted playsinline loop>
        <source src="/video/blob.mp4" type="video/mp4">
    </video>

    <div id="chatContainer" class="chat-scroll-area @(hasChatStarted ? "active" : "")">
        @foreach (var msg in CurrentConversation)
        {
            <div class="msg-bubble @(msg.IsUser ? "msg-user" : "msg-ai")">
                @if (!msg.IsUser)
                {
                    <div style="display:flex; align-items:center; gap:10px; margin-bottom:10px;">
                        <i class="fa-solid fa-robot" style="color:var(--primary-glow);"></i>
                        <strong style="color: var(--secondary-glow)">HydroAI</strong>
                    </div>
                }
                @((MarkupString)msg.Text)
            </div>
        }

        @if (isThinking)
        {
            <div class="msg-bubble msg-ai">
                <div style="display:flex; align-items:center; gap:10px;">
                    <span class="spinner-border spinner-border-sm text-info"></span>
                    <span class="text-muted" style="font-style: italic;">@loadingText</span>
                </div>
            </div>
        }
    </div>

    <div class="chat-input-wrapper">
        <div class="chat-input-box">
            <i class="fa-solid fa-sparkles" style="color: var(--primary-glow);"></i>
            <input type="text" @bind="userInput" @bind:event="oninput" @onkeyup="HandleKeyPress"
                   placeholder="Ask 'Show suppliers' or 'Paani chahiye'..." disabled="@isThinking" />

            <button class="send-btn" @onclick="SendMessage" disabled="@(string.IsNullOrWhiteSpace(userInput) || isThinking)">
                @if (isThinking)
                {
                    <i class="fa-solid fa-hourglass-half fa-spin"></i>
                }
                else
                {

                    <i class="fa-solid fa-paper-plane"></i>
                }
            </button>
        </div>
    </div>
</div>

@code {
    string MyName = "User";
    string ProfileImageUrl = "/images/fallbackimg.jpg";
    bool showProfileDropdown = false;
    bool hasChatStarted = false;
    bool isThinking = false;
    string userInput = "";
    string loadingText = "Processing...";
    Timer? _timer;

    public class ChatMessage { public string Text { get; set; } = ""; public bool IsUser { get; set; } }
    List<ChatMessage> CurrentConversation = new();

    // --- ON INITIALIZED (FIXED ERROR) ---
    protected override async Task OnInitializedAsync()
    {
        var user = AuthService.CurrentUser;
        if (user == null) { await AuthService.TryRefreshSession(); user = AuthService.CurrentUser; }

        if (user != null)
        {
            // Safe Access for Full Name
            if (user.UserMetadata != null && user.UserMetadata.TryGetValue("full_name", out var nameObj))
            {
                MyName = nameObj?.ToString() ?? "User";
            }
            else
            {
                MyName = !string.IsNullOrEmpty(user.Email) ? user.Email.Split('@')[0] : "User";
            }
        }
        else
        {
            Nav.NavigateTo("/login");
        }
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput)) return;

        hasChatStarted = true;
        string msgText = userInput;
        userInput = "";

        CurrentConversation.Add(new ChatMessage { Text = msgText, IsUser = true });

        isThinking = true;
        StartLoadingTimer();
        await ScrollToBottom();

        try
        {
            var payload = new { message = msgText };
            var jsonContent = new StringContent(JsonSerializer.Serialize(payload), Encoding.UTF8, "application/json");

            // --- CONNECTING TO YOUR PYTHON BACKEND ---
            var response = await Http.PostAsync("http://127.0.0.1:8000/chat", jsonContent);

            if (response.IsSuccessStatusCode)
            {
                var responseString = await response.Content.ReadAsStringAsync();
                using var doc = JsonDocument.Parse(responseString);

                // Extracting response
                if (doc.RootElement.TryGetProperty("response", out var respElement))
                {
                    string botReply = respElement.GetString() ?? "";

                    // Python sends <div... HTML. We don't want to replace newlines in HTML mode usually,
                    // but for text responses, we do.
                    if (!botReply.Trim().StartsWith("<div"))
                    {
                        botReply = botReply.Replace("\n", "<br>");
                    }

                    CurrentConversation.Add(new ChatMessage { Text = botReply, IsUser = false });
                }
            }
            else
            {
                CurrentConversation.Add(new ChatMessage { Text = "⚠️ Backend Error. Check Python Console.", IsUser = false });
            }
        }
        catch (Exception ex)
        {
            CurrentConversation.Add(new ChatMessage { Text = $"⚠️ Connection Failed: {ex.Message}. Make sure uvicorn is running on port 8000.", IsUser = false });
        }
        finally
        {
            StopLoadingTimer();
            isThinking = false;
            await ScrollToBottom();
        }
    }

    private void StartLoadingTimer()
    {
        _timer = new Timer(2000);
        _timer.Elapsed += (s, e) =>
        {
            if (loadingText == "Processing...") loadingText = "Fetching Data...";
            else loadingText = "Processing...";
            InvokeAsync(StateHasChanged);
        };
        _timer.Start();
    }

    private void StopLoadingTimer() { _timer?.Stop(); _timer?.Dispose(); }
    private async Task HandleKeyPress(KeyboardEventArgs e) { if (e.Key == "Enter") await SendMessage(); }
    private async Task ScrollToBottom() { await Task.Delay(100); await JS.InvokeVoidAsync("scrollToBottom", "chatContainer"); }
    void ToggleProfileDropdown() { showProfileDropdown = !showProfileDropdown; }
    void CloseDropdowns() { showProfileDropdown = false; }
    async Task HandleLogout() { await AuthService.SignOut(); Nav.NavigateTo("/login"); }
}

<script>
    window.scrollToBottom = (id) => { var el = document.getElementById(id); if (el) el.scrollTop = el.scrollHeight; }
</script>