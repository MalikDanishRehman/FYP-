@inject AI_Driven_Water_Supply.Client.Services.ToastService ToastService
@implements IDisposable

<style>
    .toast-container-custom {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .custom-toast {
        min-width: 300px;
        background: rgba(30, 35, 45, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: white;
        padding: 15px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        gap: 15px;
        animation: slideIn 0.3s ease-out forwards;
        border-left: 5px solid;
    }

    /* Colors based on Type */
    .toast-success {
        border-left-color: #00c6ff;
    }
    /* Blue/Cyan */
    .toast-error {
        border-left-color: #ff4b4b;
    }
    /* Red */
    .toast-warning {
        border-left-color: #ffc107;
    }
    /* Yellow */

    .toast-icon {
        font-size: 1.5rem;
    }

    .toast-success .toast-icon {
        color: #00c6ff;
    }

    .toast-error .toast-icon {
        color: #ff4b4b;
    }

    .toast-warning .toast-icon {
        color: #ffc107;
    }

    .toast-content h6 {
        margin: 0;
        font-weight: bold;
        font-size: 0.95rem;
    }

    .toast-content p {
        margin: 0;
        font-size: 0.85rem;
        color: #ccc;
    }

    .btn-close-custom {
        background: transparent;
        border: none;
        color: #999;
        margin-left: auto;
        font-size: 1.2rem;
        cursor: pointer;
    }

        .btn-close-custom:hover {
            color: white;
        }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
</style>

<div class="toast-container-custom">
    @foreach (var toast in ToastService.Toasts)
    {
        <div class="custom-toast toast-@toast.Type">
            <div class="toast-icon">
                @if (toast.Type == "success")
                {
                    <i class="bi bi-check-circle-fill"></i>
                }
                else if (toast.Type == "error")
                {

                    <i class="bi bi-x-circle-fill"></i>
                }
                else
                {

                    <i class="bi bi-exclamation-triangle-fill"></i>
                }
            </div>
            <div class="toast-content">
                <h6>@toast.Title</h6>
                <p>@toast.Message</p>
            </div>
            <button class="btn-close-custom" @onclick="() => ToastService.RemoveToast(toast)">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        // Jab bhi service mein naya toast aaye, UI update karo
        ToastService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        // Memory leak rokne ke liye
        ToastService.OnChange -= StateHasChanged;
    }
}