@inherits LayoutComponentBase

<!-- ✅ Main Layout -->
<div class="d-flex flex-column min-vh-100">

    <!-- 🔹 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="favicon.png" alt="Logo" width="35" height="35" class="me-2" />
                <strong>AI-Driven</strong>
            </a>
            <div class="ms-auto">
                <a class="btn btn-outline-light me-2" href="#">Sign Up</a>
                <a class="btn btn-light text-primary" href="#">Sign In</a>
            </div>
        </div>
    </nav>

    <!-- 🔹 Hero Section -->
    <section class="bg-light text-center py-5 border-bottom">
        <div class="container">
            <h1 class="display-5 fw-bold text-primary mb-3">Smart Water Distribution System 💧</h1>
            <p class="lead text-muted">
                Harnessing AI for efficient, predictive and sustainable water supply management.
            </p>
            <a href="#" class="btn btn-primary btn-lg mt-3 shadow-sm">Get Started</a>
        </div>
    </section>

    <!-- 🔹 Description Section -->
    <main class="flex-grow-1 py-5 bg-white">
        <div class="container">
            <h2 class="fw-semibold mb-4 text-center">About Our System</h2>
            <p class="text-muted fs-5">
                Our AI-Driven Water Supply system optimizes water flow, predicts shortages, and improves distribution using
                real-time data analytics. With machine learning algorithms, it ensures minimal wastage and maximum coverage
                for communities. The system integrates IoT sensors, cloud data processing, and predictive modeling to manage
                resources intelligently and sustainably.
            </p>

            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-primary">Real-Time Monitoring</h5>
                            <p class="card-text text-muted">Track flow, pressure, and usage across multiple zones instantly.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-primary">AI Predictions</h5>
                            <p class="card-text text-muted">Predict future demands and shortages using machine learning models.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-primary">Smart Control</h5>
                            <p class="card-text text-muted">Automatically balance water distribution across networks efficiently.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- 🔹 Footer -->
    <footer class="bg-primary text-white text-center py-4 mt-auto shadow-sm">
        <div class="container">
            <p class="mb-1 fw-semibold">© 2025 AI-Driven Water Supply System</p>
            <small class="text-light opacity-75">Empowering sustainability with smart technology</small>
        </div>
    </footer>
</div>
